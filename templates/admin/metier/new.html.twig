{% extends 'admin/layout.html.twig' %}

{% block title %}Créer un métier{% endblock %}

{% block breadcrumb_title %}Créer un métier{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="fa fa-briefcase"></i> Créer un nouveau métier
                    </h4>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <!-- Nom du métier -->
                    <div class="form-group mb-4">
                        <label for="{{ form.nom.vars.id }}" class="form-label">
                            <i class="fa fa-briefcase"></i> {{ form.nom.vars.label }}
                        </label>
                        {{ form_widget(form.nom) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="text-danger small mt-1">
                                <i class="fa fa-exclamation-circle"></i>
                                {% for error in form.nom.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-4">
                        <label for="{{ form.description.vars.id }}" class="form-label">
                            <i class="fa fa-file-alt"></i> {{ form.description.vars.label }}
                        </label>
                        {{ form_widget(form.description) }}
                        {% if form.description.vars.errors|length > 0 %}
                            <div class="text-danger small mt-1">
                                <i class="fa fa-exclamation-circle"></i>
                                {% for error in form.description.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Salaire et Secteur -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group mb-4">
                                <label for="{{ form.salaireeMoyen.vars.id }}" class="form-label">
                                    <i class="fa fa-money"></i> {{ form.salaireeMoyen.vars.label }}
                                </label>
                                {{ form_widget(form.salaireeMoyen) }}
                                {% if form.salaireeMoyen.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        <i class="fa fa-exclamation-circle"></i>
                                        {% for error in form.salaireeMoyen.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-4">
                                <label for="{{ form.secteur.vars.id }}" class="form-label">
                                    <i class="fa fa-industry"></i> {{ form.secteur.vars.label }}
                                </label>
                                {{ form_widget(form.secteur) }}
                                {% if form.secteur.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        <i class="fa fa-exclamation-circle"></i>
                                        {% for error in form.secteur.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Niveau d'étude et Perspectives -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group mb-4">
                                <label for="{{ form.niveauEtude.vars.id }}" class="form-label">
                                    <i class="fa fa-graduation-cap"></i> {{ form.niveauEtude.vars.label }}
                                </label>
                                {{ form_widget(form.niveauEtude) }}
                                {% if form.niveauEtude.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        <i class="fa fa-exclamation-circle"></i>
                                        {% for error in form.niveauEtude.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group mb-4">
                                <label for="{{ form.perspectivesEmploi.vars.id }}" class="form-label">
                                    <i class="fa fa-chart-line"></i> {{ form.perspectivesEmploi.vars.label }}
                                </label>
                                {{ form_widget(form.perspectivesEmploi) }}
                                {% if form.perspectivesEmploi.vars.errors|length > 0 %}
                                    <div class="text-danger small mt-1">
                                        <i class="fa fa-exclamation-circle"></i>
                                        {% for error in form.perspectivesEmploi.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Filière -->
                    <div class="form-group mb-4">
                        <label for="{{ form.filiere.vars.id }}" class="form-label">
                            <i class="fa fa-sitemap"></i> {{ form.filiere.vars.label }}
                        </label>
                        {{ form_widget(form.filiere) }}
                        {% if form.filiere.vars.errors|length > 0 %}
                            <div class="text-danger small mt-1">
                                <i class="fa fa-exclamation-circle"></i>
                                {% for error in form.filiere.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- Boutons -->
                    <div class="form-group mt-5 pt-3 border-top">
                        <button type="submit" class="btn btn-action-create btn-lg">
                            <i class="fa fa-save"></i> Créer le métier
                        </button>
                        <a href="{{ path('admin_metier_index') }}" class="btn btn-action-back btn-lg">
                            <i class="fa fa-arrow-left"></i> Retour
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
