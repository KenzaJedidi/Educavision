{% extends 'admin/layout.html.twig' %}
{% block breadcrumb_title %}Réponse{% endblock %}
{% block breadcrumb_items %}
    <li>Réponse</li>
{% endblock %}
{% block body %}
<div class="position-relative py-5" style="min-height:60vh;background:linear-gradient(135deg,#f8f9fa 0%, #e8f1ff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-xl-8">
                <div class="card border-0 shadow-lg overflow-hidden">
                    <div class="p-4 p-sm-5" style="background:linear-gradient(135deg,#20c997,#0b7ea1);">
                        <div class="d-flex align-items-center gap-3 text-white">
                            <div class="display-6"><i class="fa fa-info-circle"></i></div>
                            <div>
                                <h1 class="h3 fw-bold mb-1">Détail de la Réponse</h1>
                                <p class="mb-0 opacity-75">Réclamation <span class="badge bg-light text-dark">n°{{ reponse.reclamation.id }}</span></p>
                            </div>
                        </div>
                    </div>
                    <div class="p-4 p-sm-5 bg-white">
                        <div class="row g-4">
                            <div class="col-md-5">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold mb-3">Résumé</h5>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">ID</span>
                                                <span class="badge bg-secondary">{{ reponse.id }}</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">Réclamation</span>
                                                <span class="badge bg-info text-dark">{{ reponse.reclamation.id }}</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">Date</span>
                                                <span class="badge bg-light text-dark">{{ reponse.dateReponse|date('d/m/Y H:i') }}</span>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span class="fw-bold">Note</span>
                                                <span>
                                                    {% if reponse.rating %}
                                                        <span class="text-warning">
                                                            {% for i in 1..reponse.rating %}<i class="fa fa-star"></i>{% endfor %}
                                                        </span>
                                                        <small class="text-muted"> ({{ reponse.rating }}/5)</small>
                                                        <div class="mt-2 small">
                                                            {% if reponse.rating >= 4 %}
                                                                <span class="text-success">Très satisfait</span>
                                                            {% elseif reponse.rating == 3 %}
                                                                <span class="text-info">Satisfait</span>
                                                            {% elseif reponse.rating == 2 %}
                                                                <span class="text-warning">Insatisfait</span>
                                                            {% else %}
                                                                <span class="text-danger">Très insatisfait</span>
                                                            {% endif %}
                                                        </div>
                                                    {% else %}
                                                        <span class="text-muted">—</span>
                                                    {% endif %}
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h5 class="card-title fw-bold mb-3">Contenu de la réponse</h5>
                                        <div class="p-3 border rounded-3 bg-light">
                                            <blockquote class="blockquote mb-0" style="white-space:pre-wrap;">
                                                <span class="text-muted"><i class="fa fa-quote-left"></i></span>
                                                <span class="ms-2">{{ reponse.contenu|e }}</span>
                                            </blockquote>
                                        </div>
                                        <div class="mt-4 d-flex justify-content-between">
                                            <a href="{{ path('reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning fw-bold shadow"><i class="fa fa-edit"></i> Modifier</a>
                                            <a href="{{ path('reponse_index') }}" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Retour à la liste</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
