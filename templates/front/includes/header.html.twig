{# templates/front/includes/header.html.twig #}
<header class="header elegant-header">
    <!-- Barre de navigation principale -->
    <nav class="main-nav">
        <div class="container">
            <div class="nav-container">
                <!-- Logo -->
                <div class="nav-logo">
                    <a href="{{ path('front_home') }}">
                        <img src="{{ asset('assets/images/logo.png') }}" alt="EducaVision" class="logo">
                    </a>
                </div>

                <!-- Menu Desktop -->
                <div class="nav-menu">
                    <ul class="menu-list">
                        <li class="menu-item {% if app.request.get('_route') == 'front_cours_list' %}active{% endif %}">
                            <a href="{{ path('front_cours_list') }}">
                                <i class="fa fa-book"></i>
                                <span>Cours</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'quiz_' %}active{% endif %}">
                            <a href="{{ path('quiz_index') }}">
                                <i class="fa fa-question-circle"></i>
                                <span>Quiz</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'front_formations' %}active{% endif %}">
                            <a href="{{ path('front_formations') }}">
                                <i class="fa fa-graduation-cap"></i>
                                <span>Formations</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'front_filieres' %}active{% endif %}">
                            <a href="{{ path('front_filieres') }}">
                                <i class="fa fa-sitemap"></i>
                                <span>Filières</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'front_simulateur' %}active{% endif %}">
                            <a href="{{ path('front_simulateur') }}">
                                <i class="fa fa-calculator"></i>
                                <span>Simulateur</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'front_stages' %}active{% endif %}">
                            <a href="{{ path('front_stages') }}">
                                <i class="fa fa-briefcase"></i>
                                <span>Stages</span>
                            </a>
                        </li>
                        <li class="menu-item {% if app.request.get('_route') starts with 'front_reclamation' %}active{% endif %}">
                            <a href="{{ path('front_reclamation') }}">
                                <i class="fa fa-exclamation-circle"></i>
                                <span>Réclamation</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Actions -->
                <div class="nav-actions">
                    {% if app.user %}
                        <!-- User dropdown -->
                        <div class="user-dropdown">
                            <button class="user-btn" type="button">
                                <i class="fa fa-user-circle"></i>
                                <span>{{ app.user.prenom ?? app.user.userIdentifier }}</span>
                                <i class="fa fa-chevron-down"></i>
                            </button>
                            <div class="user-dropdown-menu">
                                <div class="dropdown-user-info">
                                    <strong>{{ app.user.prenom }} {{ app.user.nom }}</strong>
                                    <small>{{ app.user.email }}</small>
                                </div>
                                <div class="dropdown-divider"></div>
                                {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin_dashboard') }}" class="dropdown-item">
                                    <i class="fa fa-tachometer-alt"></i> Dashboard
                                </a>
                                {% elseif is_granted('ROLE_PROF') %}
                                <a href="{{ path('teacher_dashboard') }}" class="dropdown-item">
                                    <i class="fa fa-tachometer-alt"></i> Mon Dashboard
                                </a>
                                {% endif %}
                                <a href="{{ path('app_logout') }}" class="dropdown-item">
                                    <i class="fa fa-sign-out-alt"></i> Déconnexion
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <!-- Login / Register -->
                        <a href="{{ path('app_login') }}" class="login-btn">
                            <i class="fa fa-sign-in-alt"></i>
                            <span>Connexion</span>
                        </a>
                        <a href="{{ path('app_register') }}" class="register-btn">
                            <i class="fa fa-user-plus"></i>
                            <span>Inscription</span>
                        </a>
                    {% endif %}

                    <!-- Mobile Toggle -->
                    <button class="mobile-toggle" type="button">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Menu Mobile -->
    <div class="mobile-menu">
        <div class="mobile-menu-container">
            <ul class="mobile-menu-list">
                <li>
                    <a href="{{ path('front_home') }}">
                        <i class="fa fa-home"></i>
