{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier {{ formation.nom }} - EducaVision{% endblock %}

{% block breadcrumb_title %}Modifier une Formation{% endblock %}

{% block breadcrumb_items %}
<li><a href="{{ path('admin_formation_index') }}">Les Formations</a></li>
<li>Modifier {{ formation.nom }}</li>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12 m-b30">
		<div class="widget-box">
			<div class="wc-title">
				<h4>Modifier la formation : {{ formation.nom }}</h4>
			</div>
			<div class="widget-inner">
				{{ form_start(form, {'attr': {'class': 'edit-profile'}}) }}
				
				<div class="row">
					<div class="col-lg-6">
						<div class="form-group">
							{{ form_label(form.nom, 'Nom de la formation') }}
							{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(form.nom) }}
						</div>
					</div>
					
					<div class="col-lg-3">
						<div class="form-group">
							{{ form_label(form.duree, 'Durée') }}
							{{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(form.duree) }}
						</div>
					</div>
					
					<div class="col-lg-3">
						<div class="form-group">
							{{ form_label(form.niveau, 'Niveau') }}
							{{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(form.niveau) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.description, 'Description') }}
							{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
							{{ form_errors(form.description) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.prerequisTexte, 'Prérequis') }}
							{{ form_widget(form.prerequisTexte, {'attr': {'class': 'form-control', 'rows': 3}}) }}
							{{ form_errors(form.prerequisTexte) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.competencesAcquises, 'Compétences acquises') }}
							{{ form_widget(form.competencesAcquises, {'attr': {'class': 'form-control', 'rows': 3}}) }}
							{{ form_errors(form.competencesAcquises) }}
						</div>
					</div>
					
					<div class="col-lg-6">
						<div class="form-group">
							{{ form_label(form.image, 'Image') }}
							{{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(form.image) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<button type="submit" class="btn button-md green">
							<i class="fa fa-save"></i> Enregistrer les modifications
						</button>
						<a href="{{ path('admin_formation_index') }}" class="btn button-md red outline">
							<i class="fa fa-times"></i> Annuler
						</a>
					</div>
				</div>
				
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
