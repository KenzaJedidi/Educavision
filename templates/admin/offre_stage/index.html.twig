{% extends 'admin/layout.html.twig' %}

{% block title %}Offres de Stage - EducaVision{% endblock %}

{% block breadcrumb_title %}Offres de Stage{% endblock %}

{% block breadcrumb_items %}
<li><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
<li><a href="{{ path('admin_offre_stage_index') }}">Offre de stages</a></li>
<li>Les Offres</li>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
	.stats-card {
		background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
		border-radius: 10px;
		padding: 10px 14px;
		color: white;
		margin-bottom: 10px;
		box-shadow: 0 3px 10px rgba(0,0,0,0.08);
		transition: transform 0.3s ease;
	}
	.stats-card:hover {
		transform: translateY(-3px);
	}
	.stats-card.green {
		background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
	}
	.stats-card.orange {
		background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
	}
	.stats-card.blue {
		background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
	}
	.stats-card.ai {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	}
	.stats-card h3 {
		font-size: 20px;
		margin: 0;
		font-weight: bold;
		line-height: 1.2;
	}
	.stats-card p {
		margin: 2px 0 0;
		opacity: 0.9;
		font-size: 11px;
	}
	.widget-box {
		border-radius: 15px;
		overflow: hidden;
		box-shadow: 0 5px 20px rgba(0,0,0,0.08);
	}
	.wc-title {
		background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
		color: white;
		padding: 20px;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.wc-title h4 {
		margin: 0;
		color: white;
		font-weight: 600;
	}
	.table-hover tbody tr:hover {
		background-color: #f8f9ff;
		transform: scale(1.01);
		box-shadow: 0 3px 10px rgba(0,0,0,0.1);
	}
	.badge {
		padding: 8px 12px;
		border-radius: 20px;
		font-weight: 600;
		font-size: 11px;
	}
	.btn-action-create {
		background: white !important;
		color: #ff6b35 !important;
		border: 2px solid white !important;
		font-weight: 600;
	}
	.btn-action-create:hover {
		background: transparent !important;
		color: white !important;
	}
	.ai-badge { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 600; display: inline-block; }
</style>
{% endblock %}

{% block body %}
<!-- Statistiques en cartes -->
<div class="row mb-2">
	<div class="col-6 col-md-3 col-lg">
		<div class="stats-card blue">
			<h3>{{ total_offres }}</h3>
			<p><i class="fa fa-briefcase"></i> Total Offres</p>
		</div>
	</div>
	<div class="col-6 col-md-3 col-lg">
		<div class="stats-card green">
			<h3>{{ statuts['Ouvert'] ?? 0 }}</h3>
			<p><i class="fa fa-check-circle"></i> Ouvertes</p>
		</div>
	</div>
	<div class="col-6 col-md-3 col-lg">
		<div class="stats-card orange">
			<h3>{{ statuts['Fermé'] ?? 0 }}</h3>
			<p><i class="fa fa-times-circle"></i> Fermées</p>
		</div>
	</div>
	<div class="col-6 col-md-3 col-lg">
		<div class="stats-card">
			<h3>{{ statuts['Pourvu'] ?? 0 }}</h3>
			<p><i class="fa fa-user-check"></i> Pourvues</p>
		</div>
	</div>
	<div class="col-6 col-md-3 col-lg">
		<div class="stats-card ai">
			<h3>{{ salaire_moyen }} <small style="font-size:14px">DT</small></h3>
			<p><i class="fa fa-money"></i> Salaire Moyen</p>
		</div>
	</div>
</div>

{# ======== GRAPHIQUES ANALYTICS ======== #}
<div class="row mb-2 g-2">
	<div class="col-md-4">
		<div class="card border-0 shadow-sm h-100">
			<div class="card-body p-2">
				<div class="d-flex align-items-center gap-2 mb-1">
					<i class="fa fa-chart-pie" style="font-size:12px"></i>
					<strong style="font-size:11px">Répartition par statut</strong>
				</div>
				<div class="mx-auto" style="max-width:130px;height:130px;">
					<canvas id="statutPieChart" width="130" height="130"></canvas>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="card border-0 shadow-sm h-100">
			<div class="card-body p-2">
				<div class="d-flex align-items-center gap-2 mb-1">
					<i class="fa fa-chart-bar" style="font-size:12px"></i>
					<strong style="font-size:11px">Offres créées par mois</strong>
				</div>
				<div style="position:relative;height:130px;">
					<canvas id="offresParMoisChart"></canvas>
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		<div class="card border-0 shadow-sm h-100">
			<div class="card-body p-2">
				<div class="d-flex align-items-center gap-2 mb-1">
					<i class="fa fa-building" style="font-size:12px"></i>
					<strong style="font-size:11px">Top Entreprises</strong>
				</div>
				{% for entreprise, count in top_entreprises %}
					{% set pct = total_offres > 0 ? ((count / total_offres) * 100) : 0 %}
					<div class="mb-2">
						<div class="d-flex justify-content-between align-items-center small">
							<span class="text-truncate" title="{{ entreprise }}">{{ entreprise|length > 20 ? entreprise[:20] ~ '…' : entreprise }}</span>
							<span class="badge bg-light text-dark ms-1">{{ count }}</span>
						</div>
						<div style="height:7px;border-radius:4px;background:#e9ecef;overflow:hidden;">
							<div style="height:7px;width:{{ pct|round }}%;background:linear-gradient(90deg,#ff6b35,#f7931e);border-radius:4px;"></div>
						</div>
					</div>
				{% else %}
					<div class="text-muted small">Aucune donnée</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>

<div class="row">
	<!-- Affichage des messages flash -->
	{% for message in app.flashes('success') %}
	<div class="col-lg-12 m-b30">
		<div class="alert alert-success alert-dismissible fade show" role="alert">
			<i class="fa fa-check-circle"></i> {{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
	{% endfor %}

	{% for message in app.flashes('error') %}
	<div class="col-lg-12 m-b30">
		<div class="alert alert-danger alert-dismissible fade show" role="alert">
			<i class="fa fa-exclamation-circle"></i> {{ message }}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
	{% endfor %}

	<!-- Liste des offres de stage -->
	<div class="col-lg-12 m-b30">
		<div class="widget-box">
			<div class="wc-title">
				<h4>Gestion des Offres de Stage <span class="ai-badge"><i class="fa fa-robot"></i> IA</span></h4>
				<a href="{{ path('admin_offre_stage_new') }}" class="btn button-sm btn-action-create">
					<i class="fa fa-plus"></i> Ajouter une Offre
				</a>
			</div>

			<!-- Barre de recherche et Export -->
			<div class="widget-inner mb-3" style="padding: 15px; border-bottom: 1px solid #e3e3e3;">
				<div style="display: flex; gap: 10px; align-items: center;">
					<form method="GET" action="{{ path('admin_offre_stage_index') }}" class="form-inline" style="display: flex; gap: 10px; flex: 1;">
						<input type="text" name="search" class="form-control" placeholder="Rechercher par titre..." value="{{ search }}" style="flex: 1;">
						<button type="submit" class="btn btn-action-view">
							<i class="fa fa-search"></i> Rechercher
						</button>
						<a href="{{ path('admin_offre_stage_index') }}" class="btn btn-action-back">
							<i class="fa fa-redo"></i> Réinitialiser
						</a>
					</form>
					
					<!-- Boutons Export -->
					<div style="display: flex; gap: 5px; border-left: 1px solid #e3e3e3; padding-left: 15px;">
						<a href="{{ path('admin_offre_stage_export_csv', {'search': search}) }}" class="btn btn-sm" style="background-color: #28a745; color: white; border: none;">
							<i class="fa fa-file-csv"></i> CSV
						</a>
						<a href="{{ path('admin_offre_stage_export_pdf', {'search': search}) }}" class="btn btn-sm" style="background-color: #dc3545; color: white; border: none;">
							<i class="fa fa-file-pdf"></i> PDF
						</a>
					</div>
				</div>
			</div>

			<div class="widget-inner">
				{% if pagination.getTotalItemCount > 0 %}
				<div class="table-responsive">
					<table class="table table-hover table-striped">
						<thead>
							<tr>
								<th>Titre</th>
								<th>Entreprise</th>
								<th>Lieu</th>
								<th>Date Début</th>
								<th>Date Fin</th>
							<th style="text-align: center; white-space: nowrap;">Durée (j)</th>
							<th style="text-align: center; white-space: nowrap;">Salaire (DT)</th>
								<th style="text-align: center;">Statut</th>
								<th style="text-align: center;">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for offre in pagination %}
							<tr>
								<td>
									<strong style="color: #ff6b35;">{{ offre.titre }}</strong>
									{% if offre.descriptionIa is not null %}
										<br><small class="ai-badge" style="font-size:9px;padding:2px 6px;"><i class="fa fa-robot"></i> IA</small>
									{% endif %}
								</td>
								<td><i class="fa fa-building text-muted"></i> {{ offre.entreprise }}</td>
								<td><i class="fa fa-map-marker-alt text-muted"></i> {{ offre.lieu ?? '-' }}</td>
								<td><i class="fa fa-calendar text-success"></i> {{ offre.dateDebut|date('d/m/Y') }}</td>
								<td><i class="fa fa-calendar text-danger"></i> {{ offre.dateFin|date('d/m/Y') }}</td>
							<td style="text-align: center;"><span class="badge badge-info">{{ offre.dureeJours }} jours</span></td>
							<td style="text-align: center;"><strong style="color: #28a745;">{{ offre.salaire ? offre.salaire|number_format(2, ',', ' ') ~ ' DT' : '-' }}</strong></td>
							<td style="text-align: center;">
									{% if offre.statut == 'Ouvert' %}
										<span class="badge badge-success">{{ offre.statut }}</span>
									{% elseif offre.statut == 'Fermé' %}
										<span class="badge badge-danger">{{ offre.statut }}</span>
									{% else %}
										<span class="badge badge-warning">{{ offre.statut }}</span>
									{% endif %}
								</td>
							<td style="text-align: center;">
								<div class="btn-actions-group" style="justify-content: center;">
										<a href="{{ path('admin_offre_stage_show', {'id': offre.id}) }}" class="btn btn-sm btn-action-view" title="Voir">
											<i class="fa fa-eye"></i>
										</a>
										<a href="{{ path('admin_offre_stage_edit', {'id': offre.id}) }}" class="btn btn-sm btn-action-edit" title="Modifier">
											<i class="fa fa-edit"></i>
										</a>
										<a href="{{ path('admin_offre_stage_delete', {'id': offre.id}) }}" 
										   class="btn btn-sm btn-action-delete" 
										   title="Supprimer"
										   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')">
											<i class="fa fa-trash"></i>
										</a>
									</div>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>

				{# ======== PAGINATION ======== #}
				<div class="d-flex justify-content-between align-items-center px-3 pb-3 flex-wrap gap-2">
					<small class="text-muted">
						Page {{ pagination.getCurrentPageNumber }} / {{ (pagination.getTotalItemCount / pagination.getItemNumberPerPage)|round(0, 'ceil') }}
						— {{ pagination.getTotalItemCount }} offre(s)
					</small>
					<nav>
						{{ knp_pagination_render(pagination) }}
					</nav>
				</div>
				{% else %}
				<div class="text-center" style="padding: 60px 20px;">
					<div style="font-size: 80px; color: #e0e0e0; margin-bottom: 20px;">
						<i class="fa fa-briefcase"></i>
					</div>
					<h3 style="color: #999; font-weight: 300;">Aucune offre de stage disponible</h3>
					<p style="color: #bbb; margin-bottom: 30px;">Commencez par ajouter votre première offre de stage</p>
				<a href="{{ path('admin_offre_stage_new') }}" class="btn btn-lg" style="background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%); color: white; border: none; padding: 15px 40px; border-radius: 30px; font-weight: 600;">
						<i class="fa fa-plus"></i> Créer une offre
					</a>
				</div>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
	<script>
		(function() {
			// Pie Chart - Répartition par statut
			const pieCtx = document.getElementById('statutPieChart');
			if (pieCtx) {
				new Chart(pieCtx, {
					type: 'doughnut',
					data: {
						labels: ['Ouvert', 'Fermé', 'Pourvu'],
						datasets: [{
							data: [{{ statuts['Ouvert'] ?? 0 }}, {{ statuts['Fermé'] ?? 0 }}, {{ statuts['Pourvu'] ?? 0 }}],
							backgroundColor: ['#2ecc71', '#e74c3c', '#f1c40f'],
							borderColor: '#fff',
							borderWidth: 2,
						}]
					},
					options: {
						plugins: { legend: { position: 'bottom', labels: { font: { size: 11 } } } },
						cutout: '60%',
						maintainAspectRatio: false,
					}
				});
			}

			// Bar Chart - Offres par mois
			const barCtx = document.getElementById('offresParMoisChart');
			if (barCtx) {
				new Chart(barCtx, {
					type: 'bar',
					data: {
						labels: [{% for mois, count in stats_par_mois %}'{{ mois }}'{% if not loop.last %}, {% endif %}{% endfor %}],
						datasets: [{
							label: 'Offres',
							data: [{% for mois, count in stats_par_mois %}{{ count }}{% if not loop.last %}, {% endif %}{% endfor %}],
							backgroundColor: 'rgba(255, 107, 53, 0.7)',
							borderColor: '#ff6b35',
							borderWidth: 1,
							borderRadius: 5,
						}]
					},
					options: {
						responsive: true,
						maintainAspectRatio: false,
						plugins: { legend: { display: false } },
						scales: {
							y: { beginAtZero: true, ticks: { stepSize: 1 } },
							x: { ticks: { font: { size: 10 } } }
						}
					}
				});
			}
		})();
	</script>
{% endblock %}
