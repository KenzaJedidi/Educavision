	<style>
		.teacher-badge {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			color: #fff;
			padding: 4px 12px;
			border-radius: 20px;
			font-size: 11px;
			font-weight: 600;
			letter-spacing: 0.5px;
			text-transform: uppercase;
			display: inline-block;
			margin-left: 10px;
		}
		.switch-view-btn {
			display: inline-flex;
			align-items: center;
			gap: 8px;
			padding: 8px 18px;
			border-radius: 25px;
			background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
			color: #fff;
			font-weight: 600;
			font-size: 13px;
			text-decoration: none;
			transition: all 0.3s ease;
			box-shadow: 0 2px 10px rgba(17, 153, 142, 0.3);
		}
		.switch-view-btn:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 15px rgba(17, 153, 142, 0.4);
			color: #fff;
			text-decoration: none;
		}
		.switch-view-btn i {
			font-size: 14px;
		}
		.ttr-sidebar-navi .teacher-section-label {
			padding: 15px 20px 5px;
			font-size: 11px;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 1px;
			color: #999;
		}
	</style>

