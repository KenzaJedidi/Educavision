{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Chapitres - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Gestion des Chapitres{% endblock %}

{% block breadcrumb_items %}
    <li>Chapitres</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Liste des Chapitres</h4>
                <div class="card-action">
                    <a href="{{ path('admin_chapter_new') }}" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Ajouter un chapitre
                    </a>
                </div>
            </div>
            <div class="card-body">
                <!-- Filtres -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <form method="GET" class="form-inline">
                            <div class="row">
                                <div class="col-md-5">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ search }}">
                                </div>
                                <div class="col-md-4">
                                    <select name="course" class="form-control">
                                        <option value="">Tous les cours</option>
                                        {% for course in courses %}
                                            <option value="{{ course.id }}" {% if selectedCourse == course.id %}selected{% endif %}>
                                                {{ course.titre }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-info">
                                        <i class="fa fa-search"></i> Filtrer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tableau -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ordre</th>
                                <th>Titre</th>
                                <th>Cours</th>
                                <th>Professeur</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for chapter in chapters %}
                            <tr>
                                <td>
                                    {% if chapter.ordre %}
                                        <span class="badge badge-primary">{{ chapter.ordre }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <strong>{{ chapter.titre }}</strong>
                                    {% if chapter.description %}
                                        <br><small class="text-muted">{{ chapter.description|striptags|slice(0, 50) }}...</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if chapter.course %}
                                        <a href="{{ path('admin_course_show', {'id': chapter.course.id}) }}" 
                                           class="text-primary">
                                            {{ chapter.course.titre }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if chapter.teacherName %}
                                        <div>
                                            <strong>{{ chapter.teacherName }}</strong>
                                            {% if chapter.teacherEmail %}
                                                <br><small class="text-muted">{{ chapter.teacherEmail }}</small>
                                            {% endif %}
                                        </div>
                                    {% else %}
                                        <span class="text-muted">Non défini</span>
                                    {% endif %}
                                </td>
                                <td>{{ chapter.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('admin_chapter_show', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_chapter_edit', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        {% if chapter.course %}
                                            <a href="{{ path('front_chapitre_show', {'id': chapter.course.id, 'chapterId': chapter.id}) }}" 
                                               class="btn btn-sm btn-outline-success" 
                                               target="_blank" title="Voir sur le site">
                                                <i class="fa fa-external-link"></i>
                                            </a>
                                        {% endif %}
                                        <a href="{{ path('admin_chapter_delete', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce chapitre ?')"
                                           title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="6" class="text-center">
                                    <div class="py-4">
                                        <i class="fa fa-list fa-3x text-muted mb-3"></i>
                                        <h5>Aucun chapitre trouvé</h5>
                                        <p class="text-muted">Commencez par ajouter votre premier chapitre.</p>
                                        <a href="{{ path('admin_chapter_new') }}" class="btn btn-primary">
                                            <i class="fa fa-plus"></i> Ajouter un chapitre
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Statistiques -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="stat-box bg-primary">
                            <div class="stat-icon">
                                <i class="fa fa-list"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ chapters|length }}</h3>
                                <p>Total des chapitres</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-success">
                            <div class="stat-icon">
                                <i class="fa fa-book"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{% set courseIds = [] %}{% for chapter in chapters %}{% if chapter.course is not null and chapter.course.id not in courseIds %}{% set courseIds = courseIds|merge([chapter.course.id]) %}{% endif %}{% endfor %}{{ courseIds|length }}</h3>
                                <p>Cours concernés</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-warning">
                            <div class="stat-icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ chapters|filter(c => c.teacherName is not null)|length }}</h3>
                                <p>Avec professeur</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-info">
                            <div class="stat-icon">
                                <i class="fa fa-sort-numeric-up"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ chapters|filter(c => c.ordre is not null)|length }}</h3>
                                <p>Ordonnés</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.stat-box {
    border-radius: 10px;
    padding: 20px;
    color: white;
    display: flex;
    align-items: center;
    gap: 15px;
}

.stat-box .stat-icon {
    font-size: 2rem;
    opacity: 0.8;
}

.stat-box .stat-info h3 {
    margin: 0;
    font-size: 2rem;
    font-weight: bold;
}

.stat-box .stat-info p {
    margin: 0;
    opacity: 0.9;
}

.badge-success { background-color: #28a745; color: white; }
.badge-danger { background-color: #dc3545; color: white; }
.badge-warning { background-color: #ffc107; color: white; }
.badge-info { background-color: #17a2b8; color: white; }
.badge-primary { background-color: #007bff; color: white; }
.badge-secondary { background-color: #6c757d; color: white; }
</style>
{% endblock %}
