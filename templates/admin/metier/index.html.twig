{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Métiers{% endblock %}

{% block breadcrumb_title %}Les Métiers{% endblock %}

{% block body %}
<div class="container mt-4">
    <!-- Titre et bouton ajouter -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="page-title">
                <i class="fa fa-briefcase"></i> Les Métiers
            </h1>
        </div>
        <div class="col-md-6 text-right">
            <a href="{{ path('admin_metier_new') }}" class="btn btn-action-create btn-lg">
                <i class="fa fa-plus"></i> Ajouter un métier
            </a>
        </div>
    </div>

    <!-- Barre de recherche simple -->
    <div class="mb-4">
        <form method="GET" action="{{ path('admin_metier_index') }}" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="Rechercher par titre..." value="{{ search }}">
            <button type="submit" class="btn btn-action-view">
                <i class="fa fa-search"></i> Rechercher
            </button>
            <a href="{{ path('admin_metier_index') }}" class="btn btn-action-back">
                <i class="fa fa-redo"></i> Réinitialiser
            </a>
        </form>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa fa-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <!-- Liste des métiers -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            {% if metiers|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th><i class="fa fa-briefcase"></i> Nom</th>
                                <th><i class="fa fa-industry"></i> Secteur</th>
                                <th><i class="fa fa-graduation-cap"></i> Niveau d'étude</th>
                                <th><i class="fa fa-money"></i> Salaire moyen (DT)</th>
                                <th><i class="fa fa-chart-line"></i> Perspectives</th>
                                <th><i class="fa fa-cog"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for metier in metiers %}
                                <tr>
                                    <td class="fw-bold">{{ metier.nom }}</td>
                                    <td>
                                        {% if metier.secteur %}
                                            <span class="badge bg-info">{{ metier.secteur }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if metier.niveauEtude %}
                                            <span class="badge bg-primary">{{ metier.niveauEtude }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if metier.salaireeMoyen %}
                                            {{ metier.salaireeMoyen|number_format(2, ',', ' ') }} DT
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if metier.perspectivesEmploi %}
                                            {% if metier.perspectivesEmploi == 'Bon' %}
                                                <span class="badge bg-success">{{ metier.perspectivesEmploi }}</span>
                                            {% elseif metier.perspectivesEmploi == 'Moyen' %}
                                                <span class="badge bg-warning text-dark">{{ metier.perspectivesEmploi }}</span>
                                            {% else %}
                                                <span class="badge bg-danger">{{ metier.perspectivesEmploi }}</span>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-actions-group">
                                            <a href="{{ path('admin_metier_show', {'id': metier.id}) }}" class="btn btn-sm btn-action-view" title="Voir">
                                                <i class="fa fa-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('admin_metier_edit', {'id': metier.id}) }}" class="btn btn-sm btn-action-edit" title="Modifier">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                            <form method="POST" action="{{ path('admin_metier_delete', {'id': metier.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ metier.id) }}">
                                                <button type="submit" class="btn btn-sm btn-action-delete" title="Supprimer">
                                                    <i class="fa fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fa fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Aucun métier trouvé avec ces critères.</p>
                    <a href="{{ path('admin_metier_new') }}" class="btn btn-action-create mt-3">
                        <i class="fa fa-plus"></i> Créer un nouveau métier
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Résumé -->
    {% if metiers|length > 0 %}
        <div class="mt-3 text-muted">
            <small>
                <i class="fa fa-info-circle"></i> 
                {{ metiers|length }} métier{{ metiers|length > 1 ? 's' : '' }} trouvé{{ metiers|length > 1 ? 's' : '' }}
            </small>
        </div>
    {% endif %}
</div>
{% endblock %}
