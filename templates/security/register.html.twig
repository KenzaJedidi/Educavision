{% extends 'base.html.twig' %}

{% block title %}Inscription - Educavision{% endblock %}

{% block body %}
    <div class="account-form">
        <div class="account-head" style="background-image:url({{ asset('assets/images/background/bg2.jpg') }});">
            <a href="{{ path('app_home') }}"><img src="{{ asset('assets/images/logo-white-2.png') }}" alt=""></a>
        </div>
        <div class="account-form-inner">
            <div class="account-container">
                <div class="heading-bx left">
                    <h2 class="title-head">Sign Up <span>Now</span></h2>
                    <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
                </div>

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'contact-bx'}}) }}
                    <div class="row placeani">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>First Name</label>
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'John'}}) }}
                                    {{ form_errors(form.prenom) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Last Name</label>
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Doe'}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Email Address</label>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'your@email.com'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Select Role</label>
                                    {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.role) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Password</label>
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Confirm Password</label>
                                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': '••••••••'}}) }}
                                    {{ form_errors(form.plainPassword) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Phone (Optional)</label>
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+216 XX XXX XXX'}}) }}
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12 m-b30">
                            <button type="submit" class="btn button-md" style="width: 100%;">Sign Up</button>
                        </div>
                        <div class="col-lg-12">
                            <h6>Sign Up with Social media</h6>
                            <div class="d-flex">
                                <a class="btn flex-fill m-r5 facebook" href="#"><i class="fa fa-facebook"></i>Facebook</a>
                                <a class="btn flex-fill m-l5 google-plus" href="#"><i class="fa fa-google-plus"></i>Google Plus</a>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
