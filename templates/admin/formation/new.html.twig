{% extends 'admin/layout.html.twig' %}

{% block title %}Ajouter une Formation - EducaVision{% endblock %}

{% block breadcrumb_title %}Ajouter une Formation{% endblock %}

{% block breadcrumb_items %}
<li><a href="{{ path('admin_formation_index') }}">Les Formations</a></li>
<li>Nouvelle Formation</li>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12 m-b30">
		<div class="widget-box">
			<div class="wc-title">
				<h4>Créer une nouvelle formation</h4>
			</div>
			<div class="widget-inner">
				{{ form_start(form, {'attr': {'class': 'edit-profile'}}) }}
				
				<div class="row">
					<div class="col-lg-6">
						<div class="form-group">
							{{ form_label(form.nom, 'Nom de la formation') }}
							{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Développeur Web Full Stack'}}) }}
							{{ form_errors(form.nom) }}
						</div>
					</div>
					
					<div class="col-lg-3">
						<div class="form-group">
							{{ form_label(form.duree, 'Durée') }}
							{{ form_widget(form.duree, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 6 mois'}}) }}
							{{ form_errors(form.duree) }}
						</div>
					</div>
					
					<div class="col-lg-3">
						<div class="form-group">
							{{ form_label(form.niveau, 'Niveau') }}
							{{ form_widget(form.niveau, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Débutant'}}) }}
							{{ form_errors(form.niveau) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.description, 'Description') }}
							{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Description détaillée...'}}) }}
							{{ form_errors(form.description) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.prerequisTexte, 'Prérequis (optionnel)') }}
							{{ form_widget(form.prerequisTexte, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Liste des prérequis...'}}) }}
							{{ form_errors(form.prerequisTexte) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<div class="form-group">
							{{ form_label(form.competencesAcquises, 'Compétences acquises (optionnel)') }}
							{{ form_widget(form.competencesAcquises, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Liste des compétences...'}}) }}
							{{ form_errors(form.competencesAcquises) }}
						</div>
					</div>
					
					<div class="col-lg-6">
						<div class="form-group">
							{{ form_label(form.image, 'Image (optionnel)') }}
							{{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'URL ou nom du fichier'}}) }}
							{{ form_errors(form.image) }}
						</div>
					</div>
					
					<div class="col-lg-12">
						<button type="submit" class="btn button-md green">
							<i class="fa fa-save"></i> Enregistrer
						</button>
						<a href="{{ path('admin_formation_index') }}" class="btn button-md red outline">
							<i class="fa fa-times"></i> Annuler
						</a>
					</div>
				</div>
				
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>
{% endblock %}
