{% extends 'admin/layout.html.twig' %}

{% block title %}Résultats - EducaVision{% endblock %}

{% block breadcrumb_title %}Résultats de Simulation{% endblock %}

{% block breadcrumb_items %}
<li><a href="{{ path('admin_simulateur_index') }}">Simulateur</a></li>
<li>Résultats</li>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    :root {
        --primary-orange: #FF9800;
        --primary-blue: #1E3A5F;
        --light-orange: #FFF3E0;
        --light-blue: #E8F4FD;
        --border-color: #E0E0E0;
        --text-primary: #2C3E50;
        --text-secondary: #546E7A;
        --success: #4CAF50;
        --warning: #FF9800;
        --danger: #F44336;
    }

    .results-wrapper {
        background: #F9FAFC;
        min-height: calc(100vh - 60px);
        padding: 20px;
    }

    /* Actions */
    .action-bar {
        display: flex;
        gap: 12px;
        margin-bottom: 25px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 18px;
        border-radius: 6px;
        border: none;
        font-weight: 500;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: var(--primary-orange);
        color: white;
    }

    .btn-secondary {
        background: var(--primary-blue);
        color: white;
    }

    .btn-outline {
        background: white;
        border: 1px solid var(--border-color);
        color: var(--text-primary);
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    /* En-tête résultats */
    .results-header {
        background: white;
        border-radius: 8px;
        padding: 25px;
        border: 1px solid var(--border-color);
        margin-bottom: 25px;
    }

    .results-header h2 {
        color: var(--primary-blue);
        font-weight: 600;
        margin: 0 0 20px 0;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .header-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 20px;
    }

    .header-item h6 {
        margin: 0 0 5px 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
        font-weight: 500;
    }

    .header-item h3 {
        margin: 0;
        font-weight: 600;
        color: var(--text-primary);
        font-size: 1.2rem;
    }

    /* Grille principale */
    .results-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    @media (min-width: 992px) {
        .results-grid {
            grid-template-columns: 2fr 1fr;
        }
    }

    /* Carte de filière */
    .filiere-card {
        background: white;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 15px;
        border: 1px solid var(--border-color);
        transition: border-color 0.2s;
    }

    .filiere-card:hover {
        border-color: var(--primary-orange);
    }

    .filiere-card.rank-1 {
        border-left: 4px solid #FFD700;
    }

    .filiere-card.rank-2 {
        border-left: 4px solid #C0C0C0;
    }

    .filiere-card.rank-3 {
        border-left: 4px solid #CD7F32;
    }

    .filiere-content {
        display: grid;
        grid-template-columns: auto 1fr auto;
        align-items: center;
        gap: 20px;
    }

    @media (max-width: 768px) {
        .filiere-content {
            grid-template-columns: 1fr;
            gap: 15px;
        }
    }

    /* Rang */
    .rank-badge {
        width: 50px;
        height: 50px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
    }

    .rank-badge.gold {
        background: linear-gradient(135deg, #FFD700, #FFA500);
    }

    .rank-badge.silver {
        background: linear-gradient(135deg, #C0C0C0, #A9A9A9);
    }

    .rank-badge.bronze {
        background: linear-gradient(135deg, #CD7F32, #8B4513);
    }

    .rank-badge.other {
        background: var(--primary-blue);
    }

    /* Détails filière */
    .filiere-details h4 {
        margin: 0 0 8px 0;
        color: var(--text-primary);
        font-weight: 600;
        font-size: 1.1rem;
    }

    .filiere-details p {
        margin: 0 0 15px 0;
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.4;
    }

    /* Barre de progression */
    .progress-container {
        margin: 15px 0;
    }

    .progress-bar {
        height: 25px;
        border-radius: 12px;
        background: #E0E0E0;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .progress-fill {
        height: 100%;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding-right: 15px;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        transition: width 0.5s;
    }

    .progress-fill.high {
        background: linear-gradient(90deg, #4CAF50, #66BB6A);
    }

    .progress-fill.medium {
        background: linear-gradient(90deg, #FF9800, #FFB74D);
    }

    .progress-fill.low {
        background: linear-gradient(90deg, #F44336, #EF5350);
    }

    /* Score */
    .score-container {
        text-align: center;
        min-width: 100px;
    }

    .score-container h2 {
        margin: 0;
        color: var(--primary-orange);
        font-weight: 700;
        font-size: 2rem;
    }

    .score-container span {
        font-size: 0.85rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

    /* Détails du calcul */
    .calc-details {
        background: var(--light-blue);
        border-radius: 8px;
        padding: 15px;
        margin-top: 15px;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
    }

    @media (max-width: 768px) {
        .detail-grid {
            grid-template-columns: 1fr;
        }
    }

    .detail-item {
        text-align: center;
    }

    .detail-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin-bottom: 5px;
        font-weight: 500;
    }

    .detail-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-blue);
    }

    /* Sidebar */
    .sidebar-card {
        background: white;
        border-radius: 8px;
        border: 1px solid var(--border-color);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .sidebar-header {
        padding: 15px 20px;
        background: var(--light-blue);
        border-bottom: 1px solid var(--border-color);
    }

    .sidebar-header h4 {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--primary-blue);
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .sidebar-body {
        padding: 20px;
    }

    /* Podium */
    .podium-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px;
        background: #FAFAFA;
        border-radius: 8px;
        margin-bottom: 10px;
        border: 1px solid var(--border-color);
    }

    .podium-rank {
        width: 35px;
        height: 35px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        color: white;
        font-size: 1rem;
    }

    .podium-rank.gold {
        background: linear-gradient(135deg, #FFD700, #FFA500);
    }

    .podium-rank.silver {
        background: linear-gradient(135deg, #C0C0C0, #A9A9A9);
    }

    .podium-rank.bronze {
        background: linear-gradient(135deg, #CD7F32, #8B4513);
    }

    .podium-info {
        flex: 1;
    }

    .podium-info strong {
        color: var(--text-primary);
        font-weight: 600;
        font-size: 0.95rem;
    }

    .podium-score {
        font-weight: 700;
        color: var(--primary-orange);
        font-size: 1.1rem;
    }

    /* Statistiques */
    .stat-item {
        margin-bottom: 15px;
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 6px;
        font-size: 0.9rem;
        color: var(--text-primary);
        font-weight: 500;
    }

    .stat-main {
        background: var(--light-orange);
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
        border: 1px solid rgba(255, 152, 0, 0.2);
    }

    .stat-main .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-blue);
        margin: 10px 0;
    }

    .stat-main .stat-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    /* Badges dans header */
    .badge-light {
        background: var(--light-blue);
        color: var(--primary-blue);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 0.85rem;
        margin: 2px;
        display: inline-block;
    }

    @media (max-width: 768px) {
        .results-wrapper {
            padding: 15px;
        }
        
        .action-bar {
            flex-direction: column;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
        
        .header-info {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="results-wrapper">
    <!-- Actions -->
    <div class="action-bar">
        <a href="{{ path('admin_simulateur_index') }}" class="btn btn-secondary">
            <i class="fas fa-undo"></i> Nouvelle Simulation
        </a>
        <a href="{{ path('admin_simulateur_modifier', {'id': simulation.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <button onclick="window.print()" class="btn btn-outline">
            <i class="fas fa-print"></i> Imprimer
        </button>
    </div>

    <!-- En-tête -->
    <div class="results-header">
        <h2><i class="fas fa-chart-line"></i> Résultats de Simulation #{{ simulation.id }}</h2>
        <div class="header-info">
            <div class="header-item">
                <h6>Moyenne</h6>
                <h3>{{ simulation.moyenne }}/20</h3>
            </div>
            <div class="header-item">
                <h6>Spécialités</h6>
                <div>
                    {% for spe in simulation.specialites %}
                        <span class="badge-light">{{ spe }}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="header-item">
                <h6>Date</h6>
                <h3>{{ simulation.dateSimulation|date('d/m/Y H:i') }}</h3>
            </div>
            {% if resultats|length > 0 %}
            <div class="header-item">
                <h6>Top Filière</h6>
                <h3>{{ resultats[0].filiere.nom|slice(0, 20) }}{% if resultats[0].filiere.nom|length > 20 %}...{% endif %}</h3>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="results-grid">
        <!-- Colonne principale -->
        <div class="main-section">
            <div class="sidebar-card">
                <div class="sidebar-header">
                    <h4><i class="fas fa-trophy"></i> Classement des Filières</h4>
                </div>
                <div class="sidebar-body">
                    {% for result in resultats %}
                        {% set score = result.pourcentage|default(0) %}
                        {% set rank = loop.index %}
                        
                        <div class="filiere-card rank-{{ rank <= 3 ? rank : 'other' }}">
                            <div class="filiere-content">
                                <div class="rank-badge {% if rank == 1 %}gold{% elseif rank == 2 %}silver{% elseif rank == 3 %}bronze{% else %}other{% endif %}">
                                    {{ rank }}
                                </div>
                                
                                <div class="filiere-details">
                                    <h4>{{ result.filiere.nom }}</h4>
                                    <p>{{ result.filiere.description }}</p>
                                    
                                    <div class="progress-container">
                                        <div class="progress-bar">
                                            <div class="progress-fill {% if score >= 70 %}high{% elseif score >= 40 %}medium{% else %}low{% endif %}"
                                                 style="width: {{ score }}%">
                                                {{ score }}%
                                            </div>
                                        </div>
                                    </div>

                                    <div class="calc-details">
                                        <div class="detail-grid">
                                            <div class="detail-item">
                                                <div class="detail-label">Moyenne</div>
                                                <div class="detail-value">{{ result.details.note_moyenne|default(0)|round }}%</div>
                                            </div>
                                            <div class="detail-item">
                                                <div class="detail-label">Spécialités</div>
                                                <div class="detail-value">{{ result.details.score_specialites|default(0)|round }}%</div>
                                            </div>
                                            <div class="detail-item">
                                                <div class="detail-label">Préférences</div>
                                                <div class="detail-value">{{ result.details.score_preferences|default(0)|round }}%</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="score-container">
                                    <h2>{{ score }}%</h2>
                                    <span>
                                        {% if score >= 70 %}Fort
                                        {% elseif score >= 40 %}Moyen
                                        {% else %}Faible{% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="sidebar-section">
            <!-- Top 3 -->
            <div class="sidebar-card">
                <div class="sidebar-header">
                    <h4><i class="fas fa-medal"></i> Top 3</h4>
                </div>
                <div class="sidebar-body">
                    {% for result in resultats|slice(0, 3) %}
                        {% set score = result.pourcentage|default(0) %}
                        <div class="podium-item">
                            <div class="podium-rank {% if loop.index == 1 %}gold{% elseif loop.index == 2 %}silver{% else %}bronze{% endif %}">
                                {{ loop.index }}
                            </div>
                            <div class="podium-info">
                                <strong>{{ result.filiere.nom }}</strong>
                                <div style="height: 6px; background: #E0E0E0; border-radius: 3px; margin-top: 5px;">
                                    <div style="height: 100%; width: {{ score }}%; background: #4CAF50; border-radius: 3px;"></div>
                                </div>
                            </div>
                            <div class="podium-score">{{ score }}%</div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Statistiques -->
            <div class="sidebar-card">
                <div class="sidebar-header">
                    <h4><i class="fas fa-chart-pie"></i> Répartition</h4>
                </div>
                <div class="sidebar-body">
                    {% set fort = 0 %}
                    {% set moyen = 0 %}
                    {% set faible = 0 %}
                    
                    {% for result in resultats %}
                        {% set score = result.pourcentage|default(0) %}
                        {% if score >= 70 %}
                            {% set fort = fort + 1 %}
                        {% elseif score >= 40 %}
                            {% set moyen = moyen + 1 %}
                        {% else %}
                            {% set faible = faible + 1 %}
                        {% endif %}
                    {% endfor %}

                    <div class="stat-main">
                        <div class="stat-label">Filières avec accès fort</div>
                        <div class="stat-value">{{ ((fort/resultats|length)*100)|round }}%</div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-header">
                            <span>Accès fort (≥70%)</span>
                            <strong>{{ fort }}</strong>
                        </div>
                        <div style="height: 8px; background: #E0E0E0; border-radius: 4px;">
                            <div style="height: 100%; width: {{ (fort/resultats|length)*100 }}%; background: #4CAF50; border-radius: 4px;"></div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-header">
                            <span>Accès moyen (40-69%)</span>
                            <strong>{{ moyen }}</strong>
                        </div>
                        <div style="height: 8px; background: #E0E0E0; border-radius: 4px;">
                            <div style="height: 100%; width: {{ (moyen/resultats|length)*100 }}%; background: var(--primary-orange); border-radius: 4px;"></div>
                        </div>
                    </div>

                    <div class="stat-item">
                        <div class="stat-header">
                            <span>Accès faible (<40%)</span>
                            <strong>{{ faible }}</strong>
                        </div>
                        <div style="height: 8px; background: #E0E0E0; border-radius: 4px;">
                            <div style="height: 100%; width: {{ (faible/resultats|length)*100 }}%; background: #F44336; border-radius: 4px;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="sidebar-card">
                <div class="sidebar-header">
                    <h4><i class="fas fa-bolt"></i> Actions Rapides</h4>
                </div>
                <div class="sidebar-body" style="display: flex; flex-direction: column; gap: 10px;">
                    <a href="{{ path('admin_simulateur_modifier', {'id': simulation.id}) }}" class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <form method="post" action="{{ path('admin_simulateur_supprimer', {'id': simulation.id}) }}" onsubmit="return confirm('Supprimer cette simulation ?')" style="width: 100%;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ simulation.id) }}">
                        <button type="submit" class="btn btn-outline" style="width: 100%; border-color: #F44336; color: #F44336;">
                            <i class="fas fa-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des barres de progression
    const progressBars = document.querySelectorAll('.progress-fill');
    progressBars.forEach((bar, index) => {
        const width = bar.style.width;
        bar.style.width = '0';
        setTimeout(() => {
            bar.style.width = width;
        }, 200 + (index * 100));
    });
});
</script>
{% endblock %}