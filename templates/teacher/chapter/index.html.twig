{% extends 'teacher/layout.html.twig' %}

{% block title %}Mes Chapitres - EducaVision Professeur{% endblock %}

{% block breadcrumb_title %}Mes Chapitres{% endblock %}

{% block breadcrumb_items %}
    <li>Chapitres</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">Mes Chapitres</h4>
                <a href="{{ path('teacher_chapter_new') }}" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Ajouter un chapitre
                </a>
            </div>
            <div class="card-body">
                <!-- Filtres -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <form method="GET" class="form-inline">
                            <div class="row">
                                <div class="col-md-5">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ search }}">
                                </div>
                                <div class="col-md-5">
                                    <select name="course" class="form-control">
                                        <option value="">Tous les cours</option>
                                        {% for course in courses %}
                                            <option value="{{ course.id }}" {% if selectedCourse is not null and selectedCourse == course.id %}selected{% endif %}>
                                                {{ course.titre }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-info">
                                        <i class="fa fa-search"></i> Filtrer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tableau -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ordre</th>
                                <th>Titre</th>
                                <th>Cours</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for chapter in chapters %}
                            <tr>
                                <td>
                                    <span class="badge badge-primary">{{ chapter.ordre ?? '-' }}</span>
                                </td>
                                <td>
                                    <strong>{{ chapter.titre }}</strong>
                                    {% if chapter.description %}
                                        <br><small class="text-muted">{{ chapter.description|striptags|slice(0, 50) }}...</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if chapter.course %}
                                        <a href="{{ path('teacher_course_show', {'id': chapter.course.id}) }}">
                                            {{ chapter.course.titre }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Non assigné</span>
                                    {% endif %}
                                </td>
                                <td>{{ chapter.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('teacher_chapter_show', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="{{ path('teacher_chapter_edit', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="{{ path('teacher_chapter_delete', {'id': chapter.id}) }}" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce chapitre ?')"
                                           title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="py-4">
                                        <i class="fa fa-layers fa-3x text-muted mb-3" style="display:block"></i>
                                        <h5>Aucun chapitre trouvé</h5>
                                        <p class="text-muted">Ajoutez des chapitres à vos cours.</p>
                                        <a href="{{ path('teacher_chapter_new') }}" class="btn btn-primary">
                                            <i class="fa fa-plus"></i> Ajouter un chapitre
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
