{% extends 'admin/layout.html.twig' %}

{% block title %}Dashboard - EducaVision{% endblock %}

{% block breadcrumb_title %}Dashboard{% endblock %}

{% block breadcrumb_items %}
<li>Dashboard</li>
{% endblock %}

{% block body %}
<div class="mb-3 d-flex justify-content-between align-items-center">
	<h2 class="h5 mb-0">Tableau de bord</h2>
	<a href="{{ path('front_home') }}" class="btn btn-outline-primary"><i class="fa fa-home"></i> Aller à l'accueil</a>
 </div>
<!-- Cartes métriques - Offres de stage & Candidatures (placées en haut) -->
<div class="row m-b30">
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card widget-bg2">
			<div class="wc-item">
				<h4 class="wc-title">Offres de Stage</h4>
				<span class="wc-des">Offres publiées</span>
				<span class="wc-stats counter">{{ stats.offres.total }}</span>
				<div class="progress wc-progress">
					<div class="progress-bar" role="progressbar" style="width: {{ stats.offres.pct }}%;" aria-valuenow="{{ stats.offres.pct }}" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<span class="wc-progress-bx">
					<span class="wc-change">Ouvertes</span>
					<span class="wc-number ml-auto">{{ stats.offres.pct }}%</span>
				</span>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card widget-bg3">
			<div class="wc-item">
				<h4 class="wc-title">Candidatures</h4>
				<span class="wc-des">Demandes reçues</span>
				<span class="wc-stats counter">{{ stats.candidatures.total }}</span>
				<div class="progress wc-progress">
					<div class="progress-bar" role="progressbar" style="width: {{ stats.candidatures.pct }}%;" aria-valuenow="{{ stats.candidatures.pct }}" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<span class="wc-progress-bx">
					<span class="wc-change">En attente</span>
					<span class="wc-number ml-auto">{{ stats.candidatures.pct }}%</span>
				</span>
			</div>
		</div>
	</div>
</div>

<!-- Cartes métriques - Réclamations & Réponses (placées en haut) -->
<div class="row m-b30">
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card widget-bg1">
			<div class="wc-item">
				<h4 class="wc-title">Réclamations</h4>
				<span class="wc-des">Demandes enregistrées</span>
				<span class="wc-stats counter">{{ stats.reclamations.total }}</span>
				<div class="progress wc-progress">
					<div class="progress-bar" role="progressbar" style="width: {{ stats.reclamations.pct }}%;" aria-valuenow="{{ stats.reclamations.pct }}" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<span class="wc-progress-bx">
					<span class="wc-change">En cours</span>
					<span class="wc-number ml-auto">{{ stats.reclamations.pct }}%</span>
				</span>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card widget-bg4">
			<div class="wc-item">
				<h4 class="wc-title">Réponses</h4>
				<span class="wc-des">Messages envoyés</span>
				<span class="wc-stats counter">{{ stats.reponses.total }}</span>
				<div class="progress wc-progress">
					<div class="progress-bar" role="progressbar" style="width: {{ stats.reponses.pctTraitees }}%;" aria-valuenow="{{ stats.reponses.pctTraitees }}" aria-valuemin="0" aria-valuemax="100"></div>
				</div>
				<span class="wc-progress-bx">
					<span class="wc-change">Réclamations traitées</span>
					<span class="wc-number ml-auto">{{ stats.reponses.pctTraitees }}%</span>
				</span>
			</div>
		</div>
	</div>
</div>
<!-- Agrégats des notes pour les Réponses (en dehors du tableau) -->
<div class="row m-b30">
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card" style="background:linear-gradient(135deg,#6366f1,#4338ca);color:#fff;">
			<div class="wc-item p-3">
				<h4 class="wc-title">Satisfaction des réponses</h4>
				<span class="wc-des">Note moyenne</span>
				<div class="d-flex align-items-center my-2">
					<h3 class="mb-0 mr-3">{{ stats.reponses.avgRating }}</h3>
					<div>
						{% for i in 1..5 %}
							{% if i <= stats.reponses.avgRating|round(0, 'floor') %}
								<i class="fa fa-star text-warning"></i>
							{% else %}
								<i class="fa fa-star-o text-warning"></i>
							{% endif %}
						{% endfor %}
					</div>
				</div>
				<p class="mb-1">Réponses notées : <strong>{{ stats.reponses.ratedCount }}</strong> / {{ stats.reponses.total }} ({{ stats.reponses.percentRated }}%)</p>
				<p class="small">Vous pouvez cliquer sur <a href="{{ path('reponse_index') }}" class="text-white">Gérer les réponses</a> pour voir les détails et les notes individuelles.</p>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-lg-6 col-sm-12">
		<div class="widget-card">
			<div class="wc-item p-3">
				<h4 class="wc-title">Répartition des notes</h4>
				<span class="wc-des">Distribution des évaluations</span>
				<div class="widget-inner mt-3">
					<canvas id="ratingChart" width="400" height="160"></canvas>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Cards statistiques -->
<div class="row">
