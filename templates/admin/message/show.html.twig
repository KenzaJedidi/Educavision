{% extends 'admin/layout.html.twig' %}

{% block title %}Détails du Message - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Détails du Message{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('admin_message_index') }}">Messages</a></li>
    <li>Détails</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">{{ message.title }}</h4>
                <div class="card-action">
                    <a href="{{ path('admin_message_edit', {'id': message.id}) }}" class="btn btn-warning">
                        <i class="fa fa-edit"></i> Modifier
                    </a>
                </div>
            </div>
            <div class="card-body">
                <!-- Contenu principal -->
                <div class="message-content">
                    <div class="message-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Participants</h6>
                                <div class="participants">
                                    {% if message.student %}
                                        <div class="participant">
                                            <span class="badge badge-info">
                                                <i class="fa fa-user"></i> Étudiant: {{ message.student }}
                                            </span>
                                        </div>
                                    {% endif %}
                                    {% if message.teacher %}
                                        <div class="participant mt-2">
                                            <span class="badge badge-warning">
                                                <i class="fa fa-chalkboard-teacher"></i> Professeur: {{ message.teacher }}
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6>Statut</h6>
                                <div class="status-info">
                                    {% if message.isRead %}
                                        <span class="badge badge-success">
                                            <i class="fa fa-check"></i> Lu
                                        </span>
                                    {% else %}
                                        <span class="badge badge-warning">
                                            <i class="fa fa-envelope"></i> Non lu
                                        </span>
                                    {% endif %}
                                    <br>
                                    <span class="badge badge-primary mt-2">
                                        <i class="fa fa-comments"></i> {{ message.messageCount }} message{{ message.messageCount > 1 ? 's' : '' }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="message-body mt-4">
                        <h6>Contenu du message</h6>
                        <div class="content-box bg-light p-3 rounded">
                            {{ message.content|raw }}
                        </div>
                    </div>

                    {% if message.lastMessage %}
                    <div class="last-message mt-4">
                        <h6>Dernier message</h6>
                        <div class="content-box bg-success text-white p-3 rounded">
                            {{ message.lastMessage|raw }}
                        </div>
                        <small class="text-muted">
                            <i class="fa fa-clock"></i> {{ message.lastMessageAt|date('d/m/Y H:i') }}
                        </small>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Informations -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Informations</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Titre:</strong></td>
                        <td>{{ message.title }}</td>
                    </tr>
                    <tr>
                        <td><strong>Créé le:</strong></td>
                        <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                    {% if message.lastMessageAt %}
                    <tr>
                        <td><strong>Dernier message:</strong></td>
                        <td>{{ message.lastMessageAt|date('d/m/Y H:i') }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <td><strong>Statut:</strong></td>
                        <td>
                            {% if message.isRead %}
                                <span class="badge badge-success">Lu</span>
                            {% else %}
                                <span class="badge badge-warning">Non lu</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Messages:</strong></td>
                        <td>
                            <span class="badge badge-primary">{{ message.messageCount }}</span>
                        </td>
                    </tr>
                </table>

                <h6>Actions rapides</h6>
                <div class="btn-group-vertical w-100">
                    <a href="{{ path('admin_message_reply', {'id': message.id}) }}" class="btn btn-success">
                        <i class="fa fa-reply"></i> Répondre au message
                    </a>
                    <a href="{{ path('admin_message_edit', {'id': message.id}) }}" class="btn btn-warning">
                        <i class="fa fa-edit"></i> Modifier le message
                    </a>
                    {% if not message.isRead %}
                        <a href="{{ path('admin_message_mark_read', {'id': message.id}) }}" class="btn btn-success">
                            <i class="fa fa-check"></i> Marquer comme lu
                        </a>
                    {% else %}
                        <a href="{{ path('admin_message_mark_unread', {'id': message.id}) }}" class="btn btn-warning">
                            <i class="fa fa-envelope"></i> Marquer comme non lu
                        </a>
                    {% endif %}
                    {% if 'Cours :' in message.title %}
                        {% set courseTitle = message.title|replace({'Cours : ': ''}) %}
                        <a href="{{ path('admin_course_index', {'search': courseTitle}) }}" 
                           class="btn btn-outline-primary">
                            <i class="fa fa-book"></i> Voir le cours
                        </a>
                        <a href="{{ path('admin_message_index', {'search': courseTitle}) }}" 
                           class="btn btn-outline-info">
                            <i class="fa fa-comments"></i> Messages du cours
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Cours associé -->
        {% if 'Cours :' in message.title %}
            {% set courseTitle = message.title|replace({'Cours : ': ''}) %}
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title">Cours associé</h5>
                </div>
                <div class="card-body">
                    <h6>{{ courseTitle }}</h6>
                    
                    <div class="mt-3">
                        <a href="{{ path('admin_course_index', {'search': courseTitle}) }}" 
                           class="btn btn-sm btn-primary">
                            <i class="fa fa-eye"></i> Voir le cours
                        </a>
                        <a href="{{ path('admin_message_index', {'search': courseTitle}) }}" 
                           class="btn btn-sm btn-outline-info">
                            <i class="fa fa-comments"></i> Messages du cours
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Historique -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title">Historique</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6>Création du message</h6>
                            <p class="text-muted">{{ message.createdAt|date('d/m/Y H:i') }}</p>
                            <p>Message initial créé</p>
                        </div>
                    </div>
                    
                    {% if message.lastMessageAt and message.lastMessageAt != message.createdAt %}
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>Dernier message</h6>
                            <p class="text-muted">{{ message.lastMessageAt|date('d/m/Y H:i') }}</p>
                            <p>{{ message.messageCount }} message{{ message.messageCount > 1 ? 's' : '' }} échangé{{ message.messageCount > 1 ? 's' : '' }}</p>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="timeline-item">
                        <div class="timeline-marker {{ message.isRead ? 'bg-success' : 'bg-warning' }}"></div>
                        <div class="timeline-content">
                            <h6>Statut actuel</h6>
                            <p class="text-muted">
                                {% if message.isRead %}
                                    Message lu et traité
                                {% else %}
                                    Message en attente de lecture
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.message-header {
    background: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
}

.participant {
    margin-bottom: 5px;
}

.content-box {
    border-left: 4px solid #007bff;
    padding: 15px;
    margin: 10px 0;
}

.last-message .content-box {
    border-left-color: #28a745;
}

.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -30px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
}

.timeline-content h6 {
    margin: 0 0 5px 0;
    font-size: 0.9rem;
}

.timeline-content p {
    margin: 0;
    font-size: 0.8rem;
}

.btn-group-vertical .btn {
    margin-bottom: 5px;
}

.badge-success { background-color: #28a745; color: white; }
.badge-danger { background-color: #dc3545; color: white; }
.badge-warning { background-color: #ffc107; color: white; }
.badge-info { background-color: #17a2b8; color: white; }
.badge-primary { background-color: #007bff; color: white; }
.badge-secondary { background-color: #6c757d; color: white; }

.bg-primary { background-color: #007bff !important; }
.bg-success { background-color: #28a745 !important; }
.bg-warning { background-color: #ffc107 !important; }
.bg-danger { background-color: #dc3545 !important; }
.bg-info { background-color: #17a2b8 !important; }

.mt-2 { margin-top: 10px; }
.mt-3 { margin-top: 15px; }
.mt-4 { margin-top: 20px; }
</style>
{% endblock %}
