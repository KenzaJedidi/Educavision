{% extends 'teacher/layout.html.twig' %}

{% block title %}Modifier un Chapitre - EducaVision Professeur{% endblock %}

{% block breadcrumb_title %}Modifier un Chapitre{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('teacher_chapter_index') }}">Mes Chapitres</a></li>
    <li>Modifier</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Modifier le Chapitre: {{ chapter.titre }}</h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.titre) }}
                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.titre) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.course, 'Cours associé') }}
                            {{ form_widget(form.course, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.course) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.ordre) }}
                            {{ form_widget(form.ordre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.ordre) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.imageUrl) }}
                            {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageUrl) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '8'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                {# Teacher name and email are auto-filled, hide them #}
                <div style="display: none;">
                    {{ form_widget(form.teacherName) }}
                    {{ form_widget(form.teacherEmail) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('teacher_chapter_show', {'id': chapter.id}) }}" class="btn btn-info">
                        <i class="fa fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('teacher_chapter_index') }}" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Informations</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ chapter.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Cours:</strong></td>
                        <td>{{ chapter.course ? chapter.course.titre : 'Non assigné' }}</td>
                    </tr>
                    <tr>
                        <td><strong>Créé le:</strong></td>
                        <td>{{ chapter.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
