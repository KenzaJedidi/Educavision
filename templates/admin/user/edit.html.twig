{% extends 'admin/layout.html.twig' %}

{% block title %}Edit {{ utilisateur.prenom }} {{ utilisateur.nom }} - Admin{% endblock %}

{% block admin_content %}
    <div class="db-breadcrumb">
        <h4 class="breadcrumb-title">Edit User</h4>
        <ul class="db-breadcrumb-list">
            <li><a href="{{ path('admin_user_index') }}"><i class="fa fa-home"></i>Home</a></li>
            <li><a href="{{ path('admin_user_index') }}">Users</a></li>
            <li>Edit</li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>Edit: {{ utilisateur.prenom }} {{ utilisateur.nom }}</h4>
                </div>
                <div class="widget-inner">
                    {{ form_start(form, {'attr': {'class': 'edit-profile m-b30'}}) }}
                        <div class="row">
                            <div class="form-group col-6">
                                <label>First Name *</label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Last Name *</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Email Address *</label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Role *</label>
                                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                            <div class="form-group col-6">
                                <label>New Password <small class="text-muted">(leave blank to keep current)</small></label>
                                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.plainPassword) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Phone</label>
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Address</label>
                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.adresse) }}
                            </div>
                            <div class="form-group col-6">
                                <label>Status</label>
                                <div>
                                    {{ form_widget(form.actif) }} Active
                                </div>
                                {{ form_errors(form.actif) }}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-save"></i> Update User
                                </button>
                                <a href="{{ path('admin_user_index') }}" class="btn btn-secondary ml-2">Cancel</a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
