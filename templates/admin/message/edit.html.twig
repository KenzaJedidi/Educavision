{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier un Message - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Modifier un Message{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('admin_message_index') }}">Messages</a></li>
    <li>Modifier</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Modifier le Message: {{ message.title }}</h4>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                    <small class="form-text text-muted">Ex: "Cours : Nom du cours"</small>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.student) }}
                            {{ form_widget(form.student, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.student) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.teacher) }}
                            {{ form_widget(form.teacher, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.teacher) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '8'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.lastMessage) }}
                    {{ form_widget(form.lastMessage, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                    {{ form_errors(form.lastMessage) }}
                    <small class="form-text text-muted">Dernier message de la discussion</small>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.isRead) }}
                            {{ form_widget(form.isRead, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.isRead) }}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.messageCount) }}
                            {{ form_widget(form.messageCount, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.messageCount) }}
                            <small class="form-text text-muted">Nombre de messages</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div class="btn-group-vertical w-100">
                                {% if not message.isRead %}
                                    <a href="{{ path('admin_message_mark_read', {'id': message.id}) }}" 
                                       class="btn btn-success btn-sm">
                                        <i class="fa fa-check"></i> Marquer comme lu
                                    </a>
                                {% else %}
                                    <a href="{{ path('admin_message_mark_unread', {'id': message.id}) }}" 
                                       class="btn btn-warning btn-sm">
                                        <i class="fa fa-envelope"></i> Marquer comme non lu
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('admin_message_show', {'id': message.id}) }}" class="btn btn-info">
                        <i class="fa fa-eye"></i> Voir
                    </a>
                    <a href="{{ path('admin_message_index') }}" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Informations du message</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td><strong>ID:</strong></td>
                        <td>{{ message.id }}</td>
                    </tr>
                    <tr>
                        <td><strong>Créé le:</strong></td>
                        <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                    </tr>
                    <tr>
                        <td><strong>Statut:</strong></td>
                        <td>
                            {% if message.isRead %}
                                <span class="badge badge-success">Lu</span>
                            {% else %}
                                <span class="badge badge-warning">Non lu</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Messages:</strong></td>
                        <td>
                            <span class="badge badge-primary">{{ message.messageCount }}</span>
                        </td>
                    </tr>
                    {% if message.lastMessageAt %}
                    <tr>
                        <td><strong>Dernier message:</strong></td>
                        <td>{{ message.lastMessageAt|date('d/m/Y H:i') }}</td>
                    </tr>
                    {% endif %}
                </table>

                <h6>Actions rapides</h6>
                <div class="btn-group-vertical w-100">
                    {% if 'Cours :' in message.title %}
                        {% set courseTitle = message.title|replace({'Cours : ': ''}) %}
                        <a href="{{ path('admin_course_index', {'search': courseTitle}) }}" 
                           class="btn btn-outline-primary">
                            <i class="fa fa-book"></i> Voir le cours
                        </a>
                        <a href="{{ path('admin_message_index', {'search': courseTitle}) }}" 
                           class="btn btn-outline-info">
                            <i class="fa fa-comments"></i> Messages du cours
                        </a>
                    {% endif %}
                    {% if not message.isRead %}
                        <a href="{{ path('admin_message_mark_read', {'id': message.id}) }}" 
                           class="btn btn-success">
                            <i class="fa fa-check"></i> Marquer comme lu
                        </a>
                    {% else %}
                        <a href="{{ path('admin_message_mark_unread', {'id': message.id}) }}" 
                           class="btn btn-warning">
                            <i class="fa fa-envelope"></i> Marquer comme non lu
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title">Historique</h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item">
                        <div class="timeline-marker bg-primary"></div>
                        <div class="timeline-content">
                            <h6>Création du message</h6>
                            <p class="text-muted">{{ message.createdAt|date('d/m/Y H:i') }}</p>
                            <p>Message initial créé par {{ message.student ?: 'Système' }}</p>
                        </div>
                    </div>
                    
                    {% if message.lastMessageAt and message.lastMessageAt != message.createdAt %}
                    <div class="timeline-item">
                        <div class="timeline-marker bg-success"></div>
                        <div class="timeline-content">
                            <h6>Dernier message</h6>
                            <p class="text-muted">{{ message.lastMessageAt|date('d/m/Y H:i') }}</p>
                            <p>{{ message.messageCount }} message{{ message.messageCount > 1 ? 's' : '' }} échangé{{ message.messageCount > 1 ? 's' : '' }}</p>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="timeline-item">
                        <div class="timeline-marker {{ message.isRead ? 'bg-success' : 'bg-warning' }}"></div>
                        <div class="timeline-content">
                            <h6>Statut actuel</h6>
                            <p class="text-muted">
                                {% if message.isRead %}
                                    Message lu
                                {% else %}
                                    Message en attente
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
}

.form-control {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
}

.form-actions {
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #eee;
}

.form-actions .btn {
    margin-right: 10px;
}

.btn-group-vertical .btn {
    margin-bottom: 5px;
}

.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    margin-bottom: 20px;
}

.timeline-marker {
    position: absolute;
    left: -30px;
    top: 5px;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
}

.timeline-content h6 {
    margin: 0 0 5px 0;
    font-size: 0.9rem;
}

.timeline-content p {
    margin: 0;
    font-size: 0.8rem;
}

.bg-primary { background-color: #007bff !important; }
.bg-success { background-color: #28a745 !important; }
.bg-warning { background-color: #ffc107 !important; }
.bg-danger { background-color: #dc3545 !important; }
.bg-info { background-color: #17a2b8 !important; }

.badge-success { background-color: #28a745; color: white; }
.badge-danger { background-color: #dc3545; color: white; }
.badge-warning { background-color: #ffc107; color: white; }
.badge-info { background-color: #17a2b8; color: white; }
.badge-primary { background-color: #007bff; color: white; }
.badge-secondary { background-color: #6c757d; color: white; }
</style>
{% endblock %}
