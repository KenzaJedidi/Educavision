{% extends 'admin/layout.html.twig' %}

{% block title %}{{ utilisateur.prenom }} {{ utilisateur.nom }} - Admin{% endblock %}

{% block admin_content %}
    <div class="db-breadcrumb">
        <h4 class="breadcrumb-title">User Details</h4>
        <ul class="db-breadcrumb-list">
            <li><a href="{{ path('admin_user_index') }}"><i class="fa fa-home"></i>Home</a></li>
            <li><a href="{{ path('admin_user_index') }}">Users</a></li>
            <li>{{ utilisateur.prenom }} {{ utilisateur.nom }}</li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-10 m-b30">
            <div class="widget-box">
                <div class="wc-title">
                    <h4>{{ utilisateur.prenom }} {{ utilisateur.nom }}</h4>
                </div>
                <div class="widget-inner">
                    <table class="table">
                        <tr>
                            <th style="width: 200px;">ID</th>
                            <td>{{ utilisateur.id }}</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>{{ utilisateur.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>{{ utilisateur.nom }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ utilisateur.email }}</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>
                                {% if utilisateur.role == 'admin' %}
                                    <span class="badge badge-primary">Admin</span>
                                {% elseif utilisateur.role == 'professeur' %}
                                    <span class="badge badge-info">Professeur</span>
                                {% else %}
                                    <span class="badge badge-warning">Ã‰tudiant</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                {% if utilisateur.actif %}
                                    <span class="badge badge-success">Active</span>
                                {% else %}
                                    <span class="badge badge-danger">Inactive</span>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ utilisateur.telephone ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>{{ utilisateur.adresse ?? '-' }}</td>
                        </tr>
                        <tr>
                            <th>Registration Date</th>
                            <td>{{ utilisateur.dateInscription ? utilisateur.dateInscription|date('d/m/Y H:i') : '-' }}</td>
                        </tr>
                        <tr>
                            <th>Last Modified</th>
                            <td>{{ utilisateur.dateModification ? utilisateur.dateModification|date('d/m/Y H:i') : '-' }}</td>
                        </tr>
                    </table>

                    <div class="mt-3">
                        <a href="{{ path('admin_user_edit', {id: utilisateur.id}) }}" class="btn btn-primary">
                            <i class="fa fa-pencil"></i> Edit
                        </a>
                        <a href="{{ path('admin_user_toggle', {id: utilisateur.id}) }}" class="btn btn-{{ utilisateur.actif ? 'warning' : 'success' }}">
                            <i class="fa fa-{{ utilisateur.actif ? 'ban' : 'check' }}"></i> {{ utilisateur.actif ? 'Deactivate' : 'Activate' }}
                        </a>
                        <a href="{{ path('admin_user_index') }}" class="btn btn-secondary ml-2">
                            <i class="fa fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
