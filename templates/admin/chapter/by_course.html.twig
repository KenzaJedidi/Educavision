{% extends 'admin/layout.html.twig' %}

{% block title %}Chapitres du cours "{{ course.title }}" - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Chapitres du cours{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('admin_course_index') }}">Cours</a></li>
    <li><a href="{{ path('admin_course_show', {'id': course.id}) }}">{{ course.title }}</a></li>
    <li>Chapitres</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">
                    <i class="fa fa-book"></i> Chapitres du cours "{{ course.title }}"
                </h4>
                <div class="card-action">
                    <a href="{{ path('admin_chapter_new') }}?course_id={{ course.id }}" class="btn btn-info">
                        <i class="fa fa-plus"></i> Ajouter un chapitre
                    </a>
                    <a href="{{ path('admin_course_show', {'id': course.id}) }}" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i> Retour au cours
                    </a>
                </div>
            </div>
            <div class="card-body">
                {% if chapters|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Position</th>
                                    <th>Titre</th>
                                    <th>Contenu</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for chapter in chapters %}
                                    <tr>
                                        <td>{{ chapter.position }}</td>
                                        <td>{{ chapter.title }}</td>
                                        <td>
                                            {% if chapter.content|length > 100 %}
                                                {{ chapter.content|slice(0, 100) }}...
                                            {% else %}
                                                {{ chapter.content }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('admin_chapter_show', {'id': chapter.id}) }}" 
                                                   class="btn btn-sm btn-info" title="Voir">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                                <a href="{{ path('admin_chapter_edit', {'id': chapter.id}) }}" 
                                                   class="btn btn-sm btn-warning" title="Modifier">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                
                                                <!-- Move up/down buttons -->
                                                {% if not loop.first %}
                                                    <form method="post" action="{{ path('admin_chapter_move_up', {'id': chapter.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('move_up' ~ chapter.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-primary" title="Monter">
                                                            <i class="fa fa-arrow-up"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                                
                                                {% if not loop.last %}
                                                    <form method="post" action="{{ path('admin_chapter_move_down', {'id': chapter.id}) }}" style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('move_down' ~ chapter.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-secondary" title="Descendre">
                                                            <i class="fa fa-arrow-down"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                                
                                                <form method="post" action="{{ path('admin_chapter_delete', {'id': chapter.id}) }}" style="display: inline;" 
                                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce chapitre ?')">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i>
                        Ce cours n'a pas encore de chapitres. 
                        <a href="{{ path('admin_chapter_new') }}?course_id={{ course.id }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-plus"></i> Ajouter le premier chapitre
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
