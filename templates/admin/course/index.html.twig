{% extends 'admin/layout.html.twig' %}

{#
 Template d'index des cours - Interface administrateur
 Author: chemseddine gabsi
 Version: 1.0.0 - Sprint Java 2026
 Features: Recherche avancée, filtrage, gestion de statut
#}

{% block title %}Gestion des Cours - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Gestion des Cours{% endblock %}

{% block breadcrumb_items %}
    <li>Cours</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Liste des Cours</h4>
                <div class="card-action">
                    <a href="{{ path('admin_course_new') }}" class="btn btn-primary">
                        <i class="fa fa-plus"></i> Ajouter un cours
                    </a>
                </div>
            </div>
            <div class="card-body">
                <!-- Filtres -->
                <div class="row mb-3">
                    <div class="col-md-12">
                        <form method="GET" class="form-inline">
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ search }}">
                                </div>
                                <div class="col-md-3">
                                    <select name="category" class="form-control">
                                        <option value="">Toutes les catégories</option>
                                        {% for category in categories %}
                                            <option value="{{ category }}" {% if selectedCategory == category %}selected{% endif %}>
                                                {{ category }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select name="status" class="form-control">
                                        <option value="">Tous les statuts</option>
                                        <option value="1" {% if selectedStatus == '1' %}selected{% endif %}>Actif</option>
                                        <option value="0" {% if selectedStatus == '0' %}selected{% endif %}>Inactif</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-info">
                                        <i class="fa fa-search"></i> Filtrer
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tableau -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titre</th>
                                <th>Catégorie</th>
                                <th>Prix</th>
                                <th>Statut</th>
                                <th>Créé le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for course in courses %}
                            <tr>
                                <td>{{ course.id }}</td>
                                <td>
                                    <strong>{{ course.titre }}</strong>
                                    {% if course.description %}
                                        <br><small class="text-muted">{{ course.description|striptags|slice(0, 50) }}...</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if course.category %}
                                        <span class="badge badge-info">{{ course.category }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if course.price %}
                                        <span class="text-success">{{ course.price }} €</span>
                                    {% else %}
                                        <span class="text-primary">Gratuit</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if course.status == 'published' %}
                                        <span class="badge badge-success">Publié</span>
                                    {% else %}
                                        <span class="badge badge-warning">Brouillon</span>
                                    {% endif %}
                                </td>
                                <td>{{ course.createdAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('admin_course_show', {'id': course.id}) }}" 
                                           class="btn btn-sm btn-info" title="Voir">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_course_edit', {'id': course.id}) }}" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a href="{{ path('admin_course_toggle_status', {'id': course.id}) }}" 
                                           class="btn btn-sm {{ course.status == 'published' ? 'btn-secondary' : 'btn-success' }}" 
                                           title="{{ course.status == 'published' ? 'Désactiver' : 'Activer' }}">
                                            <i class="fa {{ course.status == 'published' ? 'fa-pause' : 'fa-play' }}"></i>
                                        </a>
                                        <a href="{{ path('admin_course_delete', {'id': course.id}) }}" 
                                           class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce cours ?')"
                                           title="Supprimer">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="text-center">
                                    <div class="py-4">
                                        <i class="fa fa-book fa-3x text-muted mb-3"></i>
                                        <h5>Aucun cours trouvé</h5>
                                        <p class="text-muted">Commencez par ajouter votre premier cours.</p>
                                        <a href="{{ path('admin_course_new') }}" class="btn btn-primary">
                                            <i class="fa fa-plus"></i> Ajouter un cours
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Statistiques -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="stat-box bg-primary">
                            <div class="stat-icon">
                                <i class="fa fa-book"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ courses|length }}</h3>
                                <p>Total des cours</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-success">
                            <div class="stat-icon">
                                <i class="fa fa-check"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ courses|filter(c => c.status == 'published')|length }}</h3>
                                <p>Cours publiés</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-warning">
                            <div class="stat-icon">
                                <i class="fa fa-tags"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ categories|length }}</h3>
                                <p>Catégories</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="stat-box bg-info">
                            <div class="stat-icon">
                                <i class="fa fa-euro"></i>
                            </div>
                            <div class="stat-info">
                                <h3>{{ courses|filter(c => c.price > 0)|length }}</h3>
                                <p>Cours payants</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.stat-box {
    border-radius: 10px;
    padding: 20px;
    color: white;
    display: flex;
    align-items: center;
    gap: 15px;
}

.stat-box .stat-icon {
    font-size: 2rem;
    opacity: 0.8;
}

.stat-box .stat-info h3 {
    margin: 0;
    font-size: 2rem;
    font-weight: bold;
}

.stat-box .stat-info p {
    margin: 0;
    opacity: 0.9;
}

.badge-info { background-color: #17a2b8; color: white; }
.badge-success { background-color: #28a745; color: white; }
.badge-danger { background-color: #dc3545; color: white; }
.badge-warning { background-color: #ffc107; color: white; }
.badge-primary { background-color: #007bff; color: white; }
.badge-secondary { background-color: #6c757d; color: white; }
</style>
{% endblock %}
