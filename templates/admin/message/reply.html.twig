{% extends 'admin/layout.html.twig' %}

{% block title %}Répondre au message - EducaVision Admin{% endblock %}

{% block breadcrumb_title %}Répondre au message{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('admin_message_index') }}">Messages</a></li>
    <li><a href="{{ path('admin_message_show', {'id': message.id}) }}">{{ message.title }}</a></li>
    <li>Répondre</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Répondre au message</h4>
            </div>
            <div class="card-body">
                <!-- Message original -->
                <div class="message-original mb-4">
                    <div class="bg-light p-3 rounded">
                        <h6>Message de : <strong>{{ message.student }}</strong></h6>
                        <p class="text-muted"><small>{{ message.createdAt|date('d/m/Y H:i') }}</small></p>
                        <div class="mt-2">
                            {{ message.content|raw }}
                        </div>
                    </div>
                </div>

                <!-- Historique des messages -->
                {% if message.lastMessage %}
                <div class="message-history mb-4">
                    <h6>Historique de la conversation</h6>
                    <div class="bg-info text-white p-3 rounded">
                        <p class="mb-1"><strong>Dernier message :</strong></p>
                        <p>{{ message.lastMessage|raw }}</p>
                        <small class="text-white-50">{{ message.lastMessageAt|date('d/m/Y H:i') }}</small>
                    </div>
                    <p class="text-muted mt-2">
                        <i class="fa fa-comments"></i> {{ message.messageCount }} message{{ message.messageCount > 1 ? 's' : '' }} échangé{{ message.messageCount > 1 ? 's' : '' }}
                    </p>
                </div>
                {% endif %}

                <!-- Formulaire de réponse -->
                <form method="POST" action="{{ path('admin_message_reply', {'id': message.id}) }}">
                    <div class="form-group">
                        <label for="reply_content" class="form-label font-weight-bold">
                            <i class="fa fa-reply"></i> Votre réponse
                        </label>
                        <textarea 
                            name="reply_content" 
                            id="reply_content" 
                            class="form-control" 
                            rows="6" 
                            placeholder="Saisissez votre réponse ici..."
                            required
                        ></textarea>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-paper-plane"></i> Envoyer la réponse
                        </button>
                        <a href="{{ path('admin_message_show', {'id': message.id}) }}" class="btn btn-secondary">
                            <i class="fa fa-times"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Informations sur l'étudiant -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Informations</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <tr>
                        <td><strong>Étudiant :</strong></td>
                        <td>{{ message.student }}</td>
                    </tr>
                    <tr>
                        <td><strong>Professeur :</strong></td>
                        <td>{{ message.teacher ?: 'Non assigné' }}</td>
                    </tr>
                    <tr>
                        <td><strong>Cours :</strong></td>
                        <td>
                            {% if 'Cours :' in message.title %}
                                {{ message.title|replace({'Cours : ': ''}) }}
                            {% else %}
                                Non spécifié
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Statut :</strong></td>
                        <td>
                            {% if message.isRead %}
                                <span class="badge badge-success">Lu</span>
                            {% else %}
                                <span class="badge badge-warning">Non lu</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Messages :</strong></td>
                        <td>
                            <span class="badge badge-primary">{{ message.messageCount }}</span>
                        </td>
                    </tr>
                </table>

                <h6 class="mt-3">Actions rapides</h6>
                <div class="btn-group-vertical w-100">
                    <a href="{{ path('admin_message_show', {'id': message.id}) }}" class="btn btn-outline-info">
                        <i class="fa fa-eye"></i> Voir le message complet
                    </a>
                    {% if not message.isRead %}
                        <a href="{{ path('admin_message_mark_read', {'id': message.id}) }}" class="btn btn-success">
                            <i class="fa fa-check"></i> Marquer comme lu
                        </a>
                    {% endif %}
                    <a href="{{ path('admin_message_edit', {'id': message.id}) }}" class="btn btn-outline-warning">
                        <i class="fa fa-edit"></i> Modifier le message
                    </a>
                </div>
            </div>
        </div>

        <!-- Conseils de réponse -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title">Conseils de réponse</h5>
            </div>
            <div class="card-body">
                <h6>Bonnes pratiques</h6>
                <ul class="list-unstyled">
                    <li>• Soyez clair et concis</li>
                    <li>• Adressez-vous directement à l'étudiant</li>
                    <li>• Répondez à toutes les questions posées</li>
                    <li>• Proposez des solutions concrètes</li>
                    <li>• Indiquez les prochaines étapes si nécessaire</li>
                </ul>

                <h6 class="mt-3">Modèles de réponse</h6>
                <div class="bg-light p-2 rounded small">
                    <p class="mb-1"><strong>Pour question technique :</strong></p>
                    <p class="mb-2">"Bonjour [Nom], merci pour votre question. Voici la solution : [réponse]..."</p>
                    
                    <p class="mb-1"><strong>Pour demande d'aide :</strong></p>
                    <p class="mb-2">"Bonjour [Nom], je comprends votre difficulté. Essayez cette approche : [solution]..."</p>
                    
                    <p class="mb-1"><strong>Pour information générale :</strong></p>
                    <p>"Bonjour [Nom], merci pour votre intérêt. Voici les informations demandées : [infos]..."</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.message-original {
    border-left: 4px solid #007bff;
}

.message-history {
    border-left: 4px solid #17a2b8;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
}

.form-control {
    border: 1px solid #ddd;
    border-radius: 5px;
    padding: 10px;
    font-size: 14px;
    transition: border-color 0.3s ease;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
}

.form-actions {
    margin-top: 30px;
    padding-top: 20px;
    border-top: 1px solid #eee;
}

.form-actions .btn {
    margin-right: 10px;
}

.btn-group-vertical .btn {
    margin-bottom: 5px;
}

.badge-success { background-color: #28a745; color: white; }
.badge-danger { background-color: #dc3545; color: white; }
.badge-warning { background-color: #ffc107; color: white; }
.badge-info { background-color: #17a2b8; color: white; }
.badge-primary { background-color: #007bff; color: white; }
.badge-secondary { background-color: #6c757d; color: white; }
</style>
{% endblock %}
