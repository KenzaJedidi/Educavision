{% extends 'admin/layout.html.twig' %}
{% block breadcrumb_title %}Réponse{% endblock %}
{% block breadcrumb_items %}
    <li><a href="{{ path('admin_dashboard') }}"><i class="fa fa-home"></i> Home</a></li>
    <li>Réponse</li>
{% endblock %}
{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height:60vh;">
    <div class="card shadow-lg p-4 w-100" style="max-width:500px;">
        <div class="mb-4 text-center">
            <h1 class="fw-bold text-info mb-2"><i class="fa fa-info-circle"></i> Détail de la Réponse</h1>
        </div>
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="fw-bold">ID :</span> <span class="badge bg-secondary">{{ reponse.id }}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="fw-bold">Réclamation :</span> <span class="badge bg-info text-dark">{{ reponse.reclamation.id }}</span>
            </li>
            <li class="list-group-item">
                <span class="fw-bold">Contenu :</span>
                <div class="mt-2">{{ reponse.contenu|e }}</div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="fw-bold">Date :</span> <span class="badge bg-light text-dark">{{ reponse.dateReponse|date('d/m/Y H:i') }}</span>
            </li>
        </ul>
        <div class="d-flex justify-content-between">
            <a href="{{ path('reponse_edit', {'id': reponse.id}) }}" class="btn btn-warning fw-bold shadow"><i class="fa fa-edit"></i> Modifier</a>
            <a href="{{ path('reponse_index') }}" class="btn btn-outline-secondary"><i class="fa fa-arrow-left"></i> Retour à la liste</a>
        </div>
    </div>
</div>
{% endblock %}
