{% extends 'admin/layout.html.twig' %}

{% block title %}{{ metier.nom }}{% endblock %}

{% block breadcrumb_title %}{{ metier.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <!-- Titre et statut -->
            <div class="row mb-4 align-items-center">
                <div class="col">
                    <h1 class="page-title">
                        <i class="fa fa-briefcase"></i> {{ metier.nom }}
                    </h1>
                </div>
            </div>

            <!-- Messages flash -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-check-circle"></i> {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <!-- Description -->
                    <div class="row mb-4 pb-3 border-bottom">
                        <div class="col-12">
                            <h5 class="text-muted mb-2">
                                <i class="fa fa-file-alt"></i> Description
                            </h5>
                            <p class="lead">{{ metier.description }}</p>
                        </div>
                    </div>

                    <!-- Salaire et Secteur -->
                    <div class="row mb-4 pb-3 border-bottom">
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <i class="fa fa-money"></i> Salaire moyen (DT)
                            </h6>
                            <p class="h4 text-success">
                                {% if metier.salaireeMoyen %}
                                    {{ metier.salaireeMoyen|number_format(2, ',', ' ') }} DT
                                {% else %}
                                    <span class="text-muted">Non spécifié</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <i class="fa fa-industry"></i> Secteur
                            </h6>
                            <p class="h5">
                                {% if metier.secteur %}
                                    <span class="badge bg-info p-2">{{ metier.secteur }}</span>
                                {% else %}
                                    <span class="text-muted">Non spécifié</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <!-- Niveau d'étude et Perspectives -->
                    <div class="row mb-4 pb-3 border-bottom">
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <i class="fa fa-graduation-cap"></i> Niveau d'étude requis
                            </h6>
                            <p class="h5">
                                {% if metier.niveauEtude %}
                                    <span class="badge bg-primary p-2">{{ metier.niveauEtude }}</span>
                                {% else %}
                                    <span class="text-muted">Non spécifié</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">
                                <i class="fa fa-chart-line"></i> Perspectives d'emploi
                            </h6>
                            <p class="h5">
                                {% if metier.perspectivesEmploi %}
                                    {% if metier.perspectivesEmploi == 'Bon' %}
                                        <span class="badge bg-success p-2">{{ metier.perspectivesEmploi }}</span>
                                    {% elseif metier.perspectivesEmploi == 'Moyen' %}
                                        <span class="badge bg-warning text-dark p-2">{{ metier.perspectivesEmploi }}</span>
                                    {% else %}
                                        <span class="badge bg-danger p-2">{{ metier.perspectivesEmploi }}</span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Non spécifié</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <!-- Filière -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-muted">
                                <i class="fa fa-sitemap"></i> Filière
                            </h6>
                            <p class="h5">
                                {% if metier.filiere %}
                                    <a href="{{ path('admin_filiere_show', {'id': metier.filiere.id}) }}" class="badge bg-secondary p-2 text-decoration-none">
                                        <i class="fa fa-link"></i> {{ metier.filiere.nom }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">Non assignée</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <!-- Boutons -->
                    <div class="mt-5 pt-3 border-top">
                        <div class="btn-actions-group">
                            <a href="{{ path('admin_metier_edit', {'id': metier.id}) }}" class="btn btn-action-edit btn-lg">
                                <i class="fa fa-edit"></i> Modifier
                            </a>
                            <form method="POST" action="{{ path('admin_metier_delete', {'id': metier.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce métier ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ metier.id) }}">
                                <button type="submit" class="btn btn-action-delete btn-lg">
                                    <i class="fa fa-trash"></i> Supprimer
                                </button>
                            </form>
                            <a href="{{ path('admin_metier_index') }}" class="btn btn-action-back btn-lg">
                                <i class="fa fa-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
