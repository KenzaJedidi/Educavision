{% extends 'admin/layout.html.twig' %}

{% block title %}Gestion des Quiz - EducaVision{% endblock %}

{% block breadcrumb_title %}Quiz{% endblock %}

{% block breadcrumb_items %}
<li>Quiz</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h5 mb-0">Liste des Quiz</h2>
            <a href="{{ path('admin_quiz_new') }}" class="btn btn-primary">
                <i class="fa fa-plus"></i> Nouveau Quiz
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Questions</th>
                        <th>Visible</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for quiz in quizs %}
                        <tr>
                            <td>{{ quiz.idquiz }}</td>
                            <td>
                                <a href="{{ path('admin_quiz_show', {'idquiz': quiz.idquiz}) }}">
                                    {{ quiz.titre }}
                                </a>
                            </td>
                            <td>{{ quiz.description|slice(0, 100) }}{% if quiz.description|length > 100 %}...{% endif %}</td>
                            <td>
                                <span class="badge bg-info">{{ quiz.questions|length }}</span>
                            </td>
                            <td>
                                {% if quiz.visible %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-danger">Non</span>
                                {% endif %}
                            </td>
                            <td>{{ quiz.datecreation|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('admin_quiz_show', {'idquiz': quiz.idquiz}) }}" class="btn btn-sm btn-info">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_quiz_edit', {'idquiz': quiz.idquiz}) }}" class="btn btn-sm btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('admin_quiz_delete', {'idquiz': quiz.idquiz}) }}" style="display: inline-block;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.idquiz) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce quiz ?')">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle"></i>
                                    Aucun quiz trouvé. 
                                    <a href="{{ path('admin_quiz_new') }}" class="btn btn-primary btn-sm">
                                        Créer le premier quiz
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
