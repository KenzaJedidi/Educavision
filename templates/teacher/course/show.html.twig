{% extends 'teacher/layout.html.twig' %}

{% block title %}Détails du Cours - EducaVision Professeur{% endblock %}

{% block breadcrumb_title %}Détails du Cours{% endblock %}

{% block breadcrumb_items %}
    <li><a href="{{ path('teacher_course_index') }}">Mes Cours</a></li>
    <li>Détails</li>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="card-title mb-0">{{ course.titre }}</h4>
                <a href="{{ path('teacher_course_edit', {'id': course.id}) }}" class="btn btn-warning">
                    <i class="fa fa-edit"></i> Modifier
                </a>
            </div>
            <div class="card-body">
                <!-- Image du cours -->
                {% if course.imageUrl %}
                    <div class="text-center mb-4">
                        <img src="{{ asset('front-assets/images/courses/' ~ course.imageUrl) }}" 
                             alt="{{ course.titre }}" 
                             class="img-fluid rounded"
                             style="max-height: 300px; width: auto;"
                             onerror="this.src='{{ asset('assets/images/default-course.jpg') }}'">
                    </div>
                {% endif %}

                <!-- Informations principales -->
                <div class="row">
                    <div class="col-md-6">
                        <h6>Informations générales</h6>
                        <table class="table table-sm">
                            <tr>
                                <td><strong>ID:</strong></td>
                                <td>{{ course.id }}</td>
                            </tr>
                            <tr>
                                <td><strong>Titre:</strong></td>
                                <td>{{ course.titre }}</td>
                            </tr>
                            <tr>
                                <td><strong>Catégorie:</strong></td>
                                <td>
                                    {% if course.category %}
                                        <span class="badge badge-info">{{ course.category }}</span>
                                    {% else %}
                                        <span class="text-muted">Non définie</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Prix:</strong></td>
                                <td>
                                    {% if course.price %}
                                        <span class="text-success">{{ course.price }} €</span>
                                    {% else %}
                                        <span class="text-primary">Gratuit</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Statut:</strong></td>
                                <td>
                                    {% if course.status == 1 %}
                                        <span class="badge badge-success">Actif</span>
                                    {% else %}
                                        <span class="badge badge-danger">Inactif</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Créé le:</strong></td>
                                <td>{{ course.createdAt|date('d/m/Y H:i') }}</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h6>Actions rapides</h6>
                        <div class="btn-group-vertical w-100">
                            <a href="{{ path('teacher_course_edit', {'id': course.id}) }}" class="btn btn-warning">
                                <i class="fa fa-edit"></i> Modifier le cours
                            </a>
                            <a href="{{ path('teacher_course_toggle_status', {'id': course.id}) }}" 
                               class="btn {{ course.status == 1 ? 'btn-secondary' : 'btn-success' }}">
                                <i class="fa {{ course.status == 1 ? 'fa-pause' : 'fa-play' }}"></i>
                                {{ course.status == 1 ? 'Désactiver' : 'Activer' }} le cours
                            </a>
                            <a href="{{ path('teacher_chapter_new') }}" class="btn btn-info">
                                <i class="fa fa-plus"></i> Ajouter un chapitre
                            </a>
                            <a href="{{ path('teacher_chapter_by_course', {'courseId': course.id}) }}" class="btn btn-outline-info">
                                <i class="fa fa-list"></i> Voir les chapitres
                            </a>
                            <a href="{{ path('front_cours_show', {'id': course.id}) }}" 
                               class="btn btn-outline-success" target="_blank">
                                <i class="fa fa-external-link"></i> Voir sur le site
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                {% if course.description %}
                    <div class="mt-4">
                        <h6>Description</h6>
                        <div class="bg-light p-3 rounded">
                            {{ course.description|raw }}
                        </div>
                    </div>
                {% endif %}

                <!-- PDF du cours -->
                {% if course.pdfFile %}
                    <div class="mt-4">
                        <h6><i class="fa fa-file-pdf-o"></i> Document PDF du cours</h6>
                        <div class="border rounded p-3">
                            <a href="{{ asset('uploads/courses/pdf/' ~ course.pdfFile) }}" target="_blank" class="btn btn-outline-danger btn-sm">
                                <i class="fa fa-download"></i> Télécharger le PDF
                            </a>
                            <span class="ml-2 text-muted">{{ course.pdfFile }}</span>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Chapitres du cours -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Chapitres ({{ course.chapters|length }})</h5>
                <a href="{{ path('teacher_chapter_new') }}" class="btn btn-sm btn-info">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                {% if course.chapters|length > 0 %}
                    <ul class="list-group">
                        {% for chapter in course.chapters %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>{{ chapter.ordre }}.</strong> {{ chapter.titre }}
                            </div>
                            <div>
                                <a href="{{ path('teacher_chapter_edit', {'id': chapter.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </div>
                        </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="text-center py-3">
                        <p class="text-muted">Aucun chapitre pour ce cours.</p>
                        <a href="{{ path('teacher_chapter_new') }}" class="btn btn-sm btn-info">
                            <i class="fa fa-plus"></i> Ajouter un chapitre
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Messages liés -->
        {% if courseMessages is defined and courseMessages|length > 0 %}
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title">Messages ({{ courseMessages|length }})</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    {% for msg in courseMessages|slice(0, 5) %}
                    <li class="list-group-item">
                        <small class="text-muted">{{ msg.createdAt|date('d/m/Y') }}</small>
                        <br>{{ msg.content|striptags|slice(0, 80) }}...
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
